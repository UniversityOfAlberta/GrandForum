                <ReportItem id="socialproblems_text" type="WikiTextReportItem">
                    <![CDATA[
                        {$user_mtg_socialproblems}
                    ]]>
                </ReportItem>
            </ReportItemSet>
        </ReportItemSet>
    </ReportSection>
    <ReportSection id="other" name="Other" tooltip="" blobSection="MTG_OTHER" type="ReportSection">
