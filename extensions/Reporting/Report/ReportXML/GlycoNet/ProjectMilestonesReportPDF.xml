            <![CDATA[
                <h2>Top 3 successes</h2>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="challenge" type="Textarea" blobType="BLOB_TEXT" blobItem="CHALLENGE"  rich="true">
