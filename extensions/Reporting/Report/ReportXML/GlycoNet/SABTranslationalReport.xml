<?xml version="1.0" encoding="UTF-8" ?>
<Report name="SAB Translational Report" reportType="RP_SAB_TRANS_REPORT" pdfType="RPTP_SAB_TRANS_REPORT" pdfFiles="SABTranslationalReportPDF" personId="0" ajax="true" disabled="false" year="2025">
    <Permissions>
        <Role role="SD">
            <SectionPermission id="materials" permissions="rw" />
            <SectionPermission id="table" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Role role="STAFF+">
            <SectionPermission id="materials" permissions="rw" />
            <SectionPermission id="table" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <!--Role role="RMC">
            <SectionPermission id="materials" permissions="r" />
            <SectionPermission id="table" permissions="" />
            <SectionPermission id="review" permissions="r" />
            <SectionPermission id="submit" permissions="" />
        </Role-->
        <Role role="MANAGER">
            <SectionPermission id="materials" permissions="rw" />
            <SectionPermission id="table" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Person id="2513">
            <SectionPermission id="materials" permissions="r" />
            <SectionPermission id="table" permissions="" />
            <SectionPermission id="review" permissions="" />
            <SectionPermission id="submit" permissions="" />
        </Person>
    </Permissions>
    <ReportSection id="materials" tooltip="Download Project Proposal PDFs" name="Materials" blobSection="MATERIALS" type="EditableReportSection" renderpdf="false">
        <Static>
            <![CDATA[
            <table align="left" class='wikitable'>
                <tr>
                    <th style="min-width:110px;">Project Code</th>
                    <th style="min-width:110px;">PI Name</th>
                    <th style="min-width:110px;">Project Name</th>
                    <th style="min-width:125px;">Project Proposal PDF</th>
                </tr>
            ]]>
        </Static>
        <ReportItemSet id="projects" type="AllMaterialsReportItemSet" subType="SAB-Translational">
            <ReportItem id="code" type="Text" width="100px" blobItem="CODE" blobSubItem="{$user_id}_{$project_id}">
                <![CDATA[
                    <tr><td>{$item}</td>
                ]]>
            </ReportItem>
            <ReportItem id="project_pdf" type="PDFReportItem" reportType="TranslationalReport" project="false">
                <![CDATA[<td>{$user_name}</td><td>{getText(RP_TRANS,CAT_DESC,CAT_DESC_TITLE,0,{$user_id},{$project_id})}</td><td align='center'>{$item}</td></tr>]]>
            </ReportItem>
        </ReportItemSet>
        <Static>
            <![CDATA[
                </table>
            ]]>
        </Static>
    </ReportSection>
    <ReportSection id="table" name="Summary Table" blobSection="SEC_NONE" tooltip="Summary Table" type="ReportSection">
        <Static>
            <![CDATA[
                <table width="100%" class="wikitable" rules="all" frame="box">
                    <thead>
                        <tr>
                            <th style="white-space: nowrap;">Project Code</th>
                            <th style="white-space: nowrap;">Applicant</th>
                            <th style="white-space: nowrap;">Project</th>
                            <th style="white-space: nowrap;">Reviewer 1</th>
                            <th style="white-space: nowrap;">Reviewer 2</th>
                            <th style="white-space: nowrap;">Reviewer 3</th>
                            <th style="white-space: nowrap;">Reviewer 4</th>
                            <th style="white-space: nowrap;">Reviewer 5</th>
                            <th style="white-space: nowrap;">Reviewer 6</th>
                        </tr>
                    </thead>
                    <tbody>
            ]]>
        </Static>
        <ReportItemSet id="project_materials" type="AllMaterialsReportItemSet" subType="SAB-Translational">
            <Static>
                <![CDATA[
                    <tr>
                        <td>{getText(RP_SAB_TRANS_REPORT, MATERIALS, CODE, {$user_id}_{$project_id}, 0, {$project_id})}</td>
                        <td>{$user_name}</td>
                        <td title="{getText(RP_TRANS,CAT_DESC,CAT_DESC_TITLE,0,{$user_id},{$project_id})}" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;max-width:200px;">
                            {getText(RP_TRANS,CAT_DESC,CAT_DESC_TITLE,0,{$user_id},{$project_id})}
                        </td>
                ]]>
            </Static>
            <ReportItemSet id="evaluators" type="SABReportItemSet" subType="SAB-Translational" includeSelf="true">
                <Static>
                    <![CDATA[
                        {set(rank,{getText(RP_SAB_TRANS_REVIEW,SAB_REVIEW,SAB_REVIEW_RANKING,{$parent_id},{$user_id},{$project_id})})}
                        {set(highlight,)}
                    ]]>
                </Static>
                <If id="high_if" if="{==({get(rank)},High)}">
                    <![CDATA[
                        {set(highlight,background:#00CC00)}
                    ]]>
                </If>
                <If id="medium_if" if="{==({get(rank)},Medium)}">
                    <![CDATA[
                        {set(highlight,background:#FF8800)}
                    ]]>
                </If>
                <If id="low_if" if="{==({get(rank)},Low)}">
                    <![CDATA[
                        {set(highlight,background:#FF0000)}
                    ]]>
                </If>
                <Static>
                    <![CDATA[
                        <td style="{get(highlight)}">{$user_name}</td>
                    ]]>
                </Static>
            </ReportItemSet>
            <Static>
                <![CDATA[
                    </tr>
                ]]>
            </Static>
        </ReportItemSet>
        <Static>
            <![CDATA[
                    </tbody>
                </table>
            ]]>
        </Static>
    </ReportSection>
    <ReportSection id="review" name="Project Review" blobSection="SAB_REPORT" tooltip="Review of Project Proposals" type="EditableReportSection">
        <ReportItemSet id="project_materials" type="AllMaterialsReportItemSet" subType="SAB-Translational" sortBy="{getText(RP_SAB_TRANS_REPORT, MATERIALS, CODE, {$user_id}_{$project_id}, 0, {$project_id})}">
            <If id="if" if="{!=({$user_id},{$my_id})}">
                <ReportItemSet id="toggle" type="ToggleHeaderReportItemSet" title="{getText(RP_SAB_TRANS_REPORT, MATERIALS, CODE, {$user_id}_{$project_id}, 0, {$project_id})} - {$user_name} - {getText(RP_TRANS,CAT_DESC,CAT_DESC_TITLE,0,{$user_id},0)}">
                    <ReportItemSet id="evaluators" type="SABReportItemSet" subType="SAB-Translational" includeSelf="true">
                        <Static>
                            <![CDATA[
                                <h2>Reviewer {$index}</h2>
                                <div style='margin-left:15px;'>
                                    {if("{getBlobMD5(RP_SAB_TRANS_REVIEW,SAB_REVIEW,CDA,0,{$user_id},0)}" != "", <p><a href='{$wgServer}{$wgScriptPath}/index.php?action=downloadBlob&id={getBlobMD5(RP_SAB_TRANS_REVIEW,SAB_REVIEW,CDA,0,{$user_id},0)}'>Download CDA</a></p>)}

                                    {if("{getBlobMD5(RP_SAB_TRANS_REVIEW,SAB_REVIEW,SAB_REVIEW,{$parent_id},{$user_id},0)}" != "", <p><a href='{$wgServer}{$wgScriptPath}/index.php?action=downloadBlob&id={getBlobMD5(RP_SAB_TRANS_REVIEW,SAB_REVIEW,SAB_REVIEW,{$parent_id},{$user_id},0)}'>Download Review</a></p>)}
                                </div>
                            ]]>
                        </Static>
                    </ReportItemSet>
                </ReportItemSet>
            </If>
        </ReportItemSet>
    </ReportSection>
</Report>
