<?xml version="1.0" encoding="UTF-8" ?>
<Report name="SAB Translational Report" reportType="RP_SAB_TRANS_REPORT" pdfType="RPTP_SAB_TRANS_REPORT" pdfFiles="SABTranslationalReportPDF" personId="0" ajax="true" disabled="false" year="2016">
    <Permissions>
        <Role role="SD">
            <SectionPermission id="materials" permissions="rw" />
            <SectionPermission id="table" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Role role="STAFF+">
            <SectionPermission id="materials" permissions="rw" />
            <SectionPermission id="table" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <!--Role role="RMC">
            <SectionPermission id="materials" permissions="r" />
            <SectionPermission id="table" permissions="" />
            <SectionPermission id="review" permissions="r" />
            <SectionPermission id="submit" permissions="" />
        </Role-->
        <Person id="1911">
            <SectionPermission id="materials" permissions="r" />
            <SectionPermission id="table" permissions="r" />
            <SectionPermission id="review" permissions="r" />
            <SectionPermission id="submit" permissions="" />
        </Person>
    </Permissions>
    <ReportSection id="materials" tooltip="Download Project Proposal PDFs" name="Materials" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <ReportItem id="project_materials_head" type="StaticReportItem">
            <![CDATA[
            <table align="left" class='wikitable'>
                <tr>
                    <th style="min-width:110px;">PI Name</th>
                    <th style="min-width:110px;">Project Name</th>
                    <th style="min-width:125px;">Project Proposal PDF</th>
                </tr>
            ]]>
        </ReportItem>
        <ReportItemSet id="projects" type="AllMaterialsReportItemSet" subType="SAB-Translational">
            <ReportItem id="project_pdf" type="PDFReportItem" reportType="TranslationalReport" project="false">
                <![CDATA[<tr><td>{$user_name}</td><td>{getText(RP_TRANS,CAT_DESC,CAT_DESC_TITLE,0,{$user_id},0)}</td><td align='center'>{$item}</td>]]>
            </ReportItem>
        </ReportItemSet>
        <ReportItem id="project_materials_foot" type="StaticReportItem">
            <![CDATA[
                </table>
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="table" name="Summary Table" blobSection="SEC_NONE" tooltip="Summary Table" type="ReportSection">
        <ReportItem id="header" type="Static">
            <![CDATA[
                <table width="100%" class="wikitable" rules="all" frame="box">
                    <thead>
                        <tr>
                            <th style="white-space: nowrap;">Applicant</th>
                            <th style="white-space: nowrap;">Project</th>
                            <th style="white-space: nowrap;">Reviewer 1</th>
                            <th style="white-space: nowrap;">Reviewer 2</th>
                            <th style="white-space: nowrap;">Reviewer 3</th>
                            <th style="white-space: nowrap;">Reviewer 4</th>
                            <th style="white-space: nowrap;">Reviewer 5</th>
                            <th style="white-space: nowrap;">Reviewer 6</th>
                        </tr>
                    </thead>
                    <tbody>
            ]]>
        </ReportItem>
        <ReportItemSet id="project_materials" type="AllMaterialsReportItemSet" subType="SAB-Translational">
            <ReportItem id="row_header" type="Static">
                <![CDATA[
                    <tr>
                        <td>{$user_name}</td>
                        <td title="{getText(RP_TRANS,CAT_DESC,CAT_DESC_TITLE,0,{$user_id},0)}" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;max-width:200px;">
                            {getText(RP_TRANS,CAT_DESC,CAT_DESC_TITLE,0,{$user_id},0)}
                        </td>
                ]]>
            </ReportItem>
            <ReportItemSet id="evaluators" type="SABReportItemSet" subType="SAB-Translational">
                <ReportItem id="default" type="Static">
                    <![CDATA[
                        {set(rank,{getText(RP_SAB_TRANS_REVIEW,SAB_REVIEW,SAB_REVIEW_RANKING,{$parent_id},{$user_id},0)})}
                        {set(highlight,)}
                    ]]>
                </ReportItem>
                <ReportItem id="high_if" type="If" if="{==({get(rank)},High)}">
                    <![CDATA[
                        {set(highlight,background:#00CC00)}
                    ]]>
                </ReportItem>
                <ReportItem id="medium_if" type="If" if="{==({get(rank)},Medium)}">
                    <![CDATA[
                        {set(highlight,background:#FF8800)}
                    ]]>
                </ReportItem>
                <ReportItem id="low_if" type="If" if="{==({get(rank)},Low)}">
                    <![CDATA[
                        {set(highlight,background:#FF0000)}
                    ]]>
                </ReportItem>
                <ReportItem id="row_footer" type="Static">
                    <![CDATA[
                        <td style="{get(highlight)}">{$user_name}</td>
                    ]]>
                </ReportItem>
            </ReportItemSet>
            <ReportItem id="row_footer" type="Static">
                <![CDATA[
                    </tr>
                ]]>
            </ReportItem>
        </ReportItemSet>
        <ReportItem id="footer" type="Static">
            <![CDATA[
                    </tbody>
                </table>
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="review" name="Project Review" blobSection="SAB_REPORT" tooltip="Review of Project Proposals" type="EditableReportSection">
        <ReportItemSet id="project_materials" type="AllMaterialsReportItemSet" subType="SAB-Translational">
            <ReportItemSet id="if" type="IfReportItemSet" if="{!=({$user_id},{$my_id})}">
                <ReportItemSet id="toggle" type="ToggleHeaderReportItemSet" title="{$user_name} - {getText(RP_TRANS,CAT_DESC,CAT_DESC_TITLE,0,{$user_id},0)}">
                    <ReportItemSet id="evaluators" type="SABReportItemSet" subType="SAB-Translational">
                        <ReportItem id="review" type="StaticReportItem">
                            <![CDATA[
                                <h2>Reviewer {$index}</h2>
                                <div style='margin-left:15px;'>
                                    <h3>Project Strengths</h3>
                                    <p>{getText(RP_SAB_TRANS_REVIEW,SAB_REVIEW,SAB_REVIEW_STRENGTH,{$parent_id},{$user_id},0)}</p>
                                    <h3>Project Weaknesses</h3>
                                    <p>{getText(RP_SAB_TRANS_REVIEW,SAB_REVIEW,SAB_REVIEW_WEAKNESS,{$parent_id},{$user_id},0)}</p>
                                    <h3>Project Ranking</h3>
                                    <p>{getText(RP_SAB_TRANS_REVIEW,SAB_REVIEW,SAB_REVIEW_RANKING,{$parent_id},{$user_id},0)}</p>
                                </div>
                            ]]>
                        </ReportItem>
                    </ReportItemSet>
                    <ReportItem id="summary" type="TextareaReportItem" blobType="BLOB_TEXT" blobItem="SAB_REPORT_SUMMARY">
                        <![CDATA[
                            <h2>Summary Statement</h2>
                            {$item}
                        ]]>
                    </ReportItem>
                </ReportItemSet>
            </ReportItemSet>
        </ReportItemSet>
    </ReportSection>
    <!--ReportSection id="submit" tooltip="PDF generation of the Review" name="Generate PDF" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <ReportItem id="review" type="SimpleReviewSubmitReportItem" />
    </ReportSection-->
</Report>
