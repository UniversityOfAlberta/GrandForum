<?xml version="1.0" encoding="UTF-8" ?>
<Report name="Research Exchange Program" reportType="RP_HQP_EXCHANGE" pdfType="HQP_EXCHANGE" ajax="true" disabled="false">
    <ReportSection id="status" name="Header" type="HeaderReportSection" pagebreak="false" renderpdf="true">
        <ReportItem id="report_info_head" type="StaticReportItem">
            <![CDATA[
                <img class='logo' style="position:static; float:right;margin-top:0;" src='{$wgServer}{$wgScriptPath}/skins/{$networkName}_Logo.png' />
                <h4 style='font-size:1.40em;'>Research Exchange Program<br />
                2015-2016 Application</h4>
                <br />
                <br />
                <br />
                <br />
                <br />
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="profile" name="Profile" title="Applicant Profile" tooltip="Applicant Profile" type="EditableReportSection" blobSection="PROFILE">
        <ReportItem id="trainee" type="Static">
            <![CDATA[
                <h4>Trainee</h4>
                <table class='wikitable smaller' frame='box' rules='all' width='100%'>
                    <tr>
                        <th>Name</th>
                        <th>Program/Position</th>
                        <th>Department</th>
                        <th>Institution</th>
                        <th>City</th>
                        <th>Province</th>
                        <th>Phone</th>
                        <th>Email</th>
                    </tr>
                    <tr>
                        <td>{$user_name}</td>
                        <td>{$user_level}</td>
                        <td>{$user_dept}</td>
                        <td>{$user_uni}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,CITY,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,PROV,0,{$user_id},0}</td>
                        <td>{$user_phone}</td>
                        <td>{$user_email}</td>
                    </tr>
                </table><br />
            ]]>
        </ReportItem>
        <ReportItem id="sup" type="Static">
            <![CDATA[
                <h4>Current Supervisor</h4>
                <table class='wikitable smaller' frame='box' rules='all' width='100%'>
                    <tr>
                        <th>Name</th>
                        <th>Program/Position</th>
                        <th>Department</th>
                        <th>Institution</th>
                        <th>City</th>
                        <th>Province</th>
                        <th>Phone</th>
                        <th>Email</th>
                    </tr>
                    <tr>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,SUPNAME,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,SUPPOS,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,SUPDEPT,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,SUPUNI,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,SUPCITY,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,SUPPROV,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,SUPPHONE,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,SUPEMAIL,0,{$user_id},0}</td>
                    </tr>
                </table><br />
            ]]>
        </ReportItem>
        <ReportItem id="sup" type="Static">
            <![CDATA[
                <h4>Proposed Host Supervisor</h4>
                <table class='wikitable smaller' frame='box' rules='all' width='100%'>
                    <tr>
                        <th>Name</th>
                        <th>Program/Position</th>
                        <th>Department</th>
                        <th>Institution</th>
                        <th>City</th>
                        <th>Prov/State</th>
                        <th>Country</th>
                        <th>Phone</th>
                        <th>Email</th>
                    </tr>
                    <tr>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,HOSTNAME,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,HOSTPOS,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,HOSTDEPT,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,HOSTUNI,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,HOSTCITY,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,HOSTPROV,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,HOSTCOUNTRY,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,HOSTPHONE,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROFILE,HOSTEMAIL,0,{$user_id},0}</td>
                    </tr>
                </table><br />
            ]]>
        </ReportItem>
        <ReportItem id="site" type="Radio" blobType="BLOB_TEXT" blobItem="SITE" orientation="vertical" options="In the same province as the home institution (up to $500 travel allowance)|In a different province than the home institution (up to $1000 travel allowance)|Outside of Canada (up to $2000 travel allowance)">
            <![CDATA[
                <table class='smaller'>
                    <tr>
                        <td valign='top' style='font-weight: bold;'>
                            The proposed exchange site is:
                        </td>
                        <td valign='top'>
                            {$item}
                        </td>
                    </tr>
                </table><br />
            ]]>
        </ReportItem>
        <ReportItem id="background" type="MultiText" blobType="BLOB_ARRAY" blobItem="BACKGROUND" 
                    multiple="true" 
                    labels="Degree/Position|Department|Institution|Country|Date Started&lt;br /&gt;(MM/YYYY)|Date Completed/Expected Date of Completion&lt;br /&gt;(MM/YYYY)" 
                    types="text|text|text|text|text|text"
                    class="wikitable smaller">
            <![CDATA[
                <h4>Academic Background</h4>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="scholarships" type="MultiText" blobType="BLOB_ARRAY" blobItem="SCHOLAR" 
                    multiple="true" 
                    labels="Name|Value&lt;br /&gt;(CDN $)|Year|Level" 
                    types="text|integer|integer|Select(Institutional,Provincial,National,International)"
                    class="wikitable smaller">
            <![CDATA[
                <h4>Scholarships & Awards</h4>
                {$item}
                <div class="pagebreak"></div>
            ]]>
        </ReportItem>
        <ReportItem id="bookmark" type="SubBookmark" text="Contributions">
            <![CDATA[
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="project_dashboard_prod_details" type="DashboardReportItem" structure="HQP_PUBLIC_PROFILE_STRUCTURE" table="false" details="true" totalOnly="true">
            <![CDATA[
                <h2>Contributions</h2>
                {$item}
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="proposal" type="Editable" name="Proposal" tooltip="Exchange Proposal" title="Exchange Proposal" blobSection="PROPOSAL" pagebreak="false">
        <ReportItem id="acronym" type="Static">
            <![CDATA[
                <table class='wikitable'>
                    <tr>
                        <td valign='top' align='right'><b>Project Acronym:</b></td>
                        <td valign='top'>{getText(RP_HQP_EXCHANGE,PROPOSAL,ACRONYM,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td align='right'><b>Project Title:</b></td>
                        <td>{getText(RP_HQP_EXCHANGE,PROPOSAL,TITLE,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td valign='top' align='right'><b>Theme:</b></td>
                        <td>{getText(RP_HQP_EXCHANGE,PROPOSAL,THEME,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td align='right'><b>Start Date:</b></td>
                        <td>{getText(RP_HQP_EXCHANGE,PROPOSAL,START,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td align='right'><b>End Date:</b></td>
                        <td>{getText(RP_HQP_EXCHANGE,PROPOSAL,END,0,{$user_id},0}</td>
                    </tr>
                </table>
            ]]>
        </ReportItem>
        <ReportItem id="description" type="Textarea" blobItem="DESCRIPTION" limit="750" rich="true">
            <![CDATA[
                <h2>Exchange Description</h2>
                {$item}
                <div class="pagebreak"></div>
            ]]>
        </ReportItem>
        <ReportItem id="bookmark" type="SubBookmark" text="Estimated Expenses">
            <![CDATA[
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="expenses" type="Static">
            <![CDATA[
                <h2>Estimated Expenses</h2>
                <table id='budget' frame='box' rules='all' class='wikitable' width='100%'>
                    <tr>
                        <td style='background:#CCCCCC;'><b>Expense</b></td>
                        <td style='background:#CCCCCC;'><b>Amount ($)</b></td>
                        <td style='background:#CCCCCC;'><b>Description</b></td>
                    </tr>
                    <tr>
                        <td style='background:#CCCCCC;'><b>Travel</b></td>
                        <td style='background:#CCCCCC;'></td>
                        <td style='background:#CCCCCC;'></td>
                    </tr>
                    <tr>
                        <td>&nbsp;&nbsp;Airfare</td>
                        <td align='right' style='padding-right:10px;'>{getText(RP_HQP_EXCHANGE,PROPOSAL,AIRFARE,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROPOSAL,AIRFARE_DESC,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td>&nbsp;&nbsp;Ground transport (bus, train)</td>
                        <td align='right' style='padding-right:10px;'>{getText(RP_HQP_EXCHANGE,PROPOSAL,GROUND,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROPOSAL,GROUND_DESC,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td>&nbsp;&nbsp;Private Vehicle</td>
                        <td align='right' style='padding-right:10px;'>{getText(RP_HQP_EXCHANGE,PROPOSAL,VEHICLE,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROPOSAL,VEHICLE_DESC,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td style='background:#CCCCCC;'><b>Accomodation</b></td>
                        <td style='background:#CCCCCC;'></td>
                        <td style='background:#CCCCCC;'></td>
                    </tr>
                    <tr>
                        <td>&nbsp;&nbsp;Lodging</td>
                        <td align='right' style='padding-right:10px;'>{getText(RP_HQP_EXCHANGE,PROPOSAL,LODGING,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROPOSAL,LODGING_DESC,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td>&nbsp;&nbsp;Meals</td>
                        <td align='right' style='padding-right:10px;'>{getText(RP_HQP_EXCHANGE,PROPOSAL,MEALS,0,{$user_id},0}</td>
                        <td>{getText(RP_HQP_EXCHANGE,PROPOSAL,MEALS_DESC,0,{$user_id},0}</td>
                    </tr>
                    <tr>
                        <td><b>Total</b></td>
                        <td align='right' style='padding-right:10px;'>{getText(RP_HQP_EXCHANGE,PROPOSAL,TOTAL,0,{$user_id},0}</td>
                        <td></td>
                    </tr>
                </table>
            ]]>
        </ReportItem>
        <ReportItem id="figures" type="UploadPDF" blobItem="FIGURES" mimeType="application/pdf" fileSize="5">
            <![CDATA[
                <h2>Uploads</h2>
                <h3>Figures and schemes - <small>2 pages maximum</small></h3>
                <p>Upload as a single separate PDF document. Include legends below each figure or scheme.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="letter1" type="UploadPDF" blobItem="LETTER1" mimeType="application/pdf" fileSize="2">
            <![CDATA[
                <h3>Signed letter (1 page) of support from primary academic supervisor</h3>
                <p>Upload as a single separate PDF document.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="letter2" type="UploadPDF" blobItem="LETTER2" mimeType="application/pdf" fileSize="2">
            <![CDATA[
                <h3>Signed letter of invitation (1 page) from host department or institution</h3>
                <p>Upload as a single separate PDF document.</p>
                {$item}
            ]]>
        </ReportItem>
    </ReportSection>
</Report>
