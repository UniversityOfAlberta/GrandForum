        <ReportItem id="q19" type="Integer" decimals="2" blobType="BLOB_TEXT" blobItem="Q19" width="40px" orientation="horizontal">
            <![CDATA[
                    <h1 style="margin-top: 16px">GPA</h1>
                    <p>Your Grade Point Average is calculated based on your most recent two years of full time study (or equivalent).</p>

                    <div>
                        <div style="display: inline-block; vertical-align: top;">
                            <h3>*GPA</h3>
                            {$item}
                        </div>
                
            ]]>
        </ReportItem>
        <ReportItem id="q20" type="Radio" blobType="BLOB_TEXT" withOther="true" number="true" blobItem="Q20" options="4|5|10|20|100" orientation="horizontal">
            <![CDATA[
                        <div style="display: inline-block; vertical-align: top; margin-left: 16px">
                            <h3>*GPA Scale</h3>
                            {$item}
                        </div>
                    </div>
            ]]>
        </ReportItem>
        <ReportItem id="q21" type="Text" blobType="BLOB_TEXT" editable="false" blobItem="Q21" limit="100" optional="true">
            <![CDATA[
                    <div>
                        <div style="display: inline-block; vertical-align: top;">
                        <h3>Normalized GPA</h3>
                        {$item}
                        <script type="text/javascript">
                            var calculateNormalizedGPA = function() {
                                var gpa       = $('[name=AdditionalAdmissionInfo_q19]').val();
                                var gpa_scale = $('[name=AdditionalAdmissionInfo_q20]:checked').val();
                                if (gpa_scale == 'Other') {
                                    gpa_scale = $('#AdditionalAdmissionInfo_q20_other input').val();

                                }

                                var returnValue;

                                if (gpa != '') {
                                    if ((gpa_scale == 0) || (gpa_scale == '') || (gpa_scale == null)) {
                                        returnValue = 'Scale cannot be out of 0';
                                    } else {
                                        // try calculating
                                        var normalized = (gpa * 4) / (gpa_scale);
                                        if (normalized > 4) {
                                            returnValue = 'GPA greater than scale';
                                        } else {
                                            returnValue = parseFloat(normalized).toFixed(2);
                                        }
                                    }
                                } else {
                                    returnValue = "";
                                }

                                $('[name=AdditionalAdmissionInfo_q21]').val(returnValue);
                            };

                            $('[name=AdditionalAdmissionInfo_q19]').change(calculateNormalizedGPA);
                            $('[name=AdditionalAdmissionInfo_q20]').change(calculateNormalizedGPA);
                            $('#AdditionalAdmissionInfo_q20_other input').change(calculateNormalizedGPA);
                            $(document).ready(calculateNormalizedGPA);

                        </script>
                    </div>
            ]]>
        </ReportItem>
        <ReportItem id="q22" type="Text" blobType="BLOB_TEXT" blobItem="Q22" limit="100">
            <![CDATA[
                    <div style="display: inline-block; vertical-align: top; margin-left: 16px">
                        <h3>*Institution</h3>
                        {$item}
                    </div>
            
            ]]>
        </ReportItem>
        <ReportItem id="q23" type="Calendar" blobType="BLOB_TEXT" blobItem="Q23" limit="100" width="90%" optional="true">
            <![CDATA[
                    <div>
                        <h1 style="margin-top: 16px">GRE (General)</h1>
                        <p>The GRE is not required, however, for applicants who have received their degree outside of Canada, we highly recommend taking the GRE (General).</p>
                        <h3>GRE Date</h3>
                        {$item}
            ]]>
        </ReportItem>
        <ReportItem id="q24" type="Integer" min="130" max="170" blobType="BLOB_TEXT" blobItem="Q24" limit="100" width="100px" optional="true">
