                        <div class="flex-item">
                            <h3>Quantitative<span title="Score 130-170." style="margin-left: 5px; cursor: default;" class="tooltip">&#9432;</span></h3>
                            {$item}
                        </div>
            ]]>
        </ReportItem>
        <ReportItem id="q26" type="Integer" min="0" max="6" blobType="BLOB_TEXT" blobItem="Q26" limit="100" width="100px" optional="true">
            <![CDATA[
                        <div class="flex-item">
                            <h3>Analytical<span title="Score 0-6." style="margin-left: 5px; cursor: default;" class="tooltip">&#9432;</span></h3>
                            {$item}
                        </div>
                    </div> <!-- end GRE flex -->
            ]]>
        </ReportItem>
        <ReportItem id="q27" type="Text" blobType="BLOB_TEXT" editable="false" blobItem="Q27" limit="100" width="100px" optional="true">
            <![CDATA[
                    <h3>GRE Overall<span title="Calculated field. Averages the 3 sections for a % score." style="margin-left: 5px; cursor: default;" class="tooltip">&#9432;</span></h3>
                    {$item}
                    <script type="text/javascript">
                        var calculateGRE = function() {
                            var gre1 = $('[name=AdditionalAdmissionInfo_q24]').val();
                            var gre2 = $('[name=AdditionalAdmissionInfo_q25]').val();
                            var gre3 = $('[name=AdditionalAdmissionInfo_q26]').val();

                            var returnValue = '';
                            if ((gre1 != '') && (gre2 != '') && (gre3 != '')) {
                                returnValue = (((gre1/170) + (gre2/170) + (gre3/6)) / 3) * 100;
                                returnValue = parseFloat(returnValue).toFixed(2);
                            }

                            $('[name=AdditionalAdmissionInfo_q27]').val(returnValue);
                        };

                        $('[name=AdditionalAdmissionInfo_q24]').change(calculateGRE);
                        $('[name=AdditionalAdmissionInfo_q25]').change(calculateGRE);
                        $('[name=AdditionalAdmissionInfo_q26]').change(calculateGRE);
                        $(document).ready(calculateGRE);

                    </script>
                </div> <!-- end flex item2 -->
            </div> <!-- end flex container -->
            ]]>
        </ReportItem>


