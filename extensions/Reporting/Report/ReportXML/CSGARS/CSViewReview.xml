<?xml version="1.0" encoding="UTF-8" ?>
<Report name="OTViewReview" reportType="RP_OTT" pdfType="RPTP_OTT" pdfFiles="OTViewReview" ajax="true" disabled="false">
    <Permissions>
        <Role role="Faculty">
            <SectionPermission id="review student" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Role role="Manager">
            <SectionPermission id="review student" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Role role="Admin">
            <SectionPermission id="review student" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
    </Permissions>
    <ReportSection id="review student" tooltip="Student Review" name="Review Student" blobSection="OT_REVIEW" type="EditableReportSection" pagebreak="false">
        <ReportItem id="js" type="StaticReportItem">
            <![CDATA[
            <script type='text/javascript'>
            $('#aboveTabs').hide();
            $('#reportTabs').hide();
            $('#reportHeader').hide();
            $('#reportBody').css('min-height',0);
            </script>
            ]]>
        </ReportItem>
        <ReportItemSet id="if_statement" type="IfReportItemSet" if="{or({contains({$user_full_roles}, Faculty)},{contains({$user_full_roles}, Chair)})}">
            <ReportItemSet id="header" type="ToggleHeaderReportItemSet" title="{$user_reversed_name}">
                <ReportItem id="table_header" type="StaticReportItem">
                    <![CDATA[
                    <table border="1" style="border-collapse:collapse">
			<tr><td colspan="2" style="text-align:center"><h3>Statement of Intent & CV</h3></td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q11" type="RadioReportItem" blobItem="Q11" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span 'style=font:size 14px;'><h3>Special considerations that make this application compelling?:</h3></span><br />
                            {$item}</td></tr>
                        ]]>
                </ReportItem>
		<ReportItem id="q11_comments" type="SelectReportItem" blobItem="Q11_comments" options="Holds a graduate degree| Has publications from undergrad or grad work|Undergrad thesis|Athlete in training/competition|Artist/musician in training/competition|Student in a co-op/work term program who maintained a strong GPA|Other" width="500px" blobSubItem="{$project_id}" sopBlob="true" orientation="horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span 'style=font:size 14px;'><h3>If yes, choose one:</h3></span><br />
                            {$item}</td></tr>
                        ]]>
		</ReportItem>
                <ReportItem id="q112_comments" type="TextareaReportItem" blobType="BLOB_TEXT" blobItem="Q112_comments" rich="true" limit="150" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span 'style=font:size 14px;'><h3>Comments:</h3></span>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q13" type="RadioReportItem" blobItem="Q13" blobType="BLOB_TEXT" options="Yes|No|Undecided|Special Consideration" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span 'style=font:size 14px;'><h3>Suggest Admission?:</h3></span><br />
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q12" type="TextareaReportItem" blobType="BLOB_TEXT" blobItem="Q12" rich="true" limit="150" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span 'style=font:size 14px;'><h3>Justification for Recommendation:</h3></span>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="table_header" type="StaticReportItem">
                    <![CDATA[
                    </table>
                    ]]>
                </ReportItem>
            </ReportItemSet>
        </ReportItemSet>
        <ReportItemSet id="if_statement" type="IfReportItemSet" if="{contains({$user_full_roles}, Manager)}">
                <ReportItem id="table_header" type="StaticReportItem">
                    <![CDATA[
                    <br />
                    ]]>
                </ReportItem>
	</ReportItemSet>
        <ReportItemSet id="professors" type="AllSopReviewerReportItemSet" roles="Professor" sort_reversed="true">
            <ReportItemSet id="if_statement" type="IfReportItemSet" if="{!=({$my_id}, {$user_id})}">
                <ReportItemSet id="header" type="ToggleHeaderReportItemSet" title="{$user_reversed_name}" sop="true">
                    <ReportItem id="feedback_unedit" type="StaticReportItem">
                        <![CDATA[
				                        <table border="1" style="border-collapse:collapse">
                        <tr><td><span 'style=font-size: 14px;'><h3>Special considerations that make this application compelling?:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q11,{$project_id},{$user_id},{$project_id})} ({getText(RP_OTT,OT_REVIEW,Q11_comments,{$project_id},{$user_id},{$project_id})})</td></tr>
                        <tr><td colspan=2>Comments:<br />{getText(RP_OTT,OT_REVIEW,Q112_comments,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>Suggest Admission?:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q13,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td colspan=2><span 'style=font-size: 14px;'><h3>Justification for Recommendation:</h3></span>
                        {getText(RP_OTT,OT_REVIEW,Q12,{$project_id},{$user_id},{$project_id})}</td></tr>
                        </table>
                        ]]>
                    </ReportItem>
                    
                </ReportItemSet>
            </ReportItemSet>
        </ReportItemSet>
    </ReportSection>
    <ReportSection id="submit" tooltip="PDF generation of the Review" name="Generate PDF" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <Instructions>
            <![CDATA[
            
            ]]>
        </Instructions>
        <ReportItem id="review" type="SimpleReviewSubmitReportItem" />
    </ReportSection>
    
</Report>
