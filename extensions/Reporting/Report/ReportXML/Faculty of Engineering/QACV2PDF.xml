<?xml version="1.0" encoding="UTF-8" ?>
<Report name=" " headerName=" " footer="{$next_year} Quality Assurance Reporting Period: July 1 {$startYear} - June 30 {$endYear}" reportType="RP_QA2" pdfType="RPTP_QA2" ajax="true" startYear="-5" personId="{GET(userId, {$my_id})}">
    <ReportSection id="information" tooltip="Information" name="Information" title="QA CV" blobSection="FEC_INFORMATION" type="HeaderReportSection" pagebreak="false">
        <Static>
            <![CDATA[
                <div style='position: absolute; top:-2.5em; border-style: solid; border-color: black; border-width: 0 0 1pt 0;'>
                    This abbreviated CV was generated by the UAlberta Faculty of Science Forum system, to meet the requirements of University of Albertaâ€™s {$this_year} Quality Assurance Graduate and Undergraduate Program Review. Information is reported for the July 1 {$startYear} to June 30 {$endYear} period only, and does not reflect the full academic record of the staff member.
                </div>
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <h1 style='padding:0; margin:0; font-size: 2em; font-weight: normal;'>{$user_name}</h1>
                <table style="width:100%;line-height:1em;" cellpadding='0'>
                    <tr>
                        <td style='width:50%;' valign='top'>
                            <table width="100%" cellpadding='0'>
                                <tr><td>{$user_level}</td></tr>
                                <tr><td>{$user_uni}</td></tr>
                                <tr><td>{$user_dept}</td></tr>
                            </table>
                        </td>
                        <td valign='top'>
                            <table width="100%" cellpadding='0'>
                                <tr><td align="right">Year of PhD:&nbsp;<b>{$user_phd_year}</b></td></tr>
                                <tr><td align="right">Year of Appointment:&nbsp;<b>{$user_appointment_year}</b></td></tr>
                            </table>
                        </td>
                    </tr>
                </table><br />
            ]]>
        </Static>
        
        <!-- Employment/Education History -->
        <ReportItem id="employmentbookmark" type="BookmarkReportItem" title="Employment History">
            <![CDATA[
                <h2>Employment History</h2>
            ]]>
        </ReportItem>
        <ReportItem id="employment" type="PersonEmployment3ReportItem" university="University of Alberta">
            <![CDATA[
                {$item}<br />
            ]]>
        </ReportItem>
        
        <!-- Honors and Awards -->
        <If id="award_if" if="{>({getNProducts(1900-01-01, {$next_year}-12-31, Award, all,, false)}, 0)}">
            <ReportItem id="awardbookmark" type="BookmarkReportItem" title="Honors and Awards">
                <![CDATA[
                    <h2>Honors and Awards</h2>
                    <table class='wikitable' frame='box' rules='all' width='100%' style='page-break-inside: avoid;'>
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Award Category</th>
                                <th>Awarded By</th>
                                <th>Scope</th>
                                <th>Years</th>
                            </tr>
                        </thead>
                ]]>
            </ReportItem>
            <ReportItemSet id="awards" type="PersonProductsReportItemSet" category="Award" includeHQP="false" start="1900-01-01" end="{$next_year}-12-31">
                <Static>
                    <![CDATA[
                        <tr>
                            <td>{$product_title}</td>
                            <td align='left'>{$product_type}</td>
                            <td align='left'>{$award_by}</td>
                            <td align='left'>{$award_scope}</td>
                            <td align='center'>{$award_year_range}</td>
                        </tr>
                    ]]>
                </Static>
            </ReportItemSet>
            <Static>
                <![CDATA[
                    </table><br />
                ]]>
            </Static>
        </If>
        
        <!-- Courses Taught -->
        <If id="courses_if" if="{>({$user_courses_count},0)}">
            <ReportItem id="coursesbookmark" type="BookmarkReportItem" title="Courses Taught">
                <![CDATA[
                    <h2>Courses Taught</h2>
                ]]>
            </ReportItem>
            <ReportItem id="courses" type="PersonCoursesReportItem" start="{$start_year}-07-01" end="{$this_year}-06-30" noTable="true">
                <![CDATA[
                    {$item}<br />
                ]]>
            </ReportItem>
        </If>
        
        <!-- Teaching Development and Innovation -->
        <If if="{contains({$user_roles},ATS)}">
            <ReportItem id="teachingbookmark" type="BookmarkReportItem" title="Teaching Development and Innovation">
                <![CDATA[
                    <h2>Last 3 Years of Teaching Development and Innovation</h2>
                ]]>
            </ReportItem>
            <If if="{!=(,{getArray(RP_FEC, FEC_COURSES, FEC_INFO_DEVELOPMENT, 0, {$user_id}, 0, development,;,{$this_year})})}">
                <ReportItem id="development" type="MultiTextReportItem" blobReport="RP_FEC" blobSection="FEC_COURSES" blobItem="FEC_INFO_DEVELOPMENT" blobYear="{$this_year}" blobType="BLOB_ARRAY" labels="Description" types="Textarea" multiple="true" orientation="list" delimiter="&lt;br />">
                    <![CDATA[
                        <h3>{$this_year}</h3>
                        {$item}
                        
                    ]]>
                </ReportItem>
            </If>
            <If if="{!=(,{getArray(RP_FEC, FEC_COURSES, FEC_INFO_DEVELOPMENT, 0, {$user_id}, 0, development,;,{$last_year})})}">
                <ReportItem id="development" type="MultiTextReportItem" blobReport="RP_FEC" blobSection="FEC_COURSES" blobItem="FEC_INFO_DEVELOPMENT" blobYear="{$last_year}" blobType="BLOB_ARRAY" labels="Description" types="Textarea" multiple="true" orientation="list" delimiter="&lt;br />">
                    <![CDATA[
                        <h3>{$last_year}</h3>
                        {$item}<br />
                    ]]>
                </ReportItem>
            </If>
            <If if="{!=(,{getArray(RP_FEC, FEC_COURSES, FEC_INFO_DEVELOPMENT, 0, {$user_id}, 0, development,;,{$2_years_ago})})}">
                <ReportItem id="development" type="MultiTextReportItem" blobReport="RP_FEC" blobSection="FEC_COURSES" blobItem="FEC_INFO_DEVELOPMENT" blobYear="{$2_years_ago}" blobType="BLOB_ARRAY" labels="Description" types="Textarea" multiple="true" orientation="list" delimiter="&lt;br />">
                    <![CDATA[
                        <h3>{$2_years_ago}</h3>
                        {$item}<br />
                    ]]>
                </ReportItem>
            </If>
        </If>
        
        <!-- Supervision and Training Responsibilities -->
        <If if="{!contains({$user_roles},ATS)}">
            <ReportItem id="studentsbookmark" type="BookmarkReportItem" title="Supervision and Training Responsibilities">
                <![CDATA[
                    <h2>Supervision and Training Responsibilities</h2>
                ]]>
            </ReportItem>
            <Static>
                <![CDATA[
                    <table class="wikitable" frame="box" rules="all">
                        <tr>
                            <th style='width:12em;'>Level</th>
                            <th>Current</th>
                            <th>Completed</th>
                        </tr>
                        <tr>
                            <td>PDFs (co)supervised</td>
                            <td>{user_fellow_count(current)}</td>
                            <td>{user_fellow_count(completed)}</td>
                        </tr>
                        <tr>
                            <td>PhD students</td>
                            <td>{user_phd_count(current)}</td>
                            <td>{user_phd_count(completed)}</td>
                        </tr>
                        <tr>
                            <td>MSc students</td>
                            <td>{user_msc_count(current)}</td>
                            <td>{user_msc_count(completed)}</td>
                        </tr>
                        <tr>
                            <td>Undergraduate students</td>
                            <td>{user_ugrad_count(current)}</td>
                            <td>{user_ugrad_count(completed)}</td>
                        </tr>
                        <tr>
                            <td>Technical personnel</td>
                            <td>{user_tech_count(current)}</td>
                            <td>{user_tech_count(completed)}</td>
                        </tr>
                    </table><br />
                ]]>
            </Static>
        </If>
        
        <!-- Publications -->
        <If if="{!contains({$user_roles},ATS)}">
            <ReportItem id="publicationbookmark" type="BookmarkReportItem" title="15 Most Recent Publications">
                <![CDATA[
                    <h2>15 Most Recent Publications</h2>
                    <small>italic = <i>PDF</i>; bold = <b>graduate student</b>; underline = <u>undergraduate student</u></small>
                    <ul>
                ]]>
            </ReportItem>
            <ReportItemSet id="products" type="PersonProductsReportItemSet" category="Publication" productType="Journal Paper|Journal Abstract|Collections Paper|Conference Paper|Proceedings Paper|Workshop Paper|Bachelors Thesis|Book|Book Chapter|Edited Book|Magazine/Newspaper Article|Masters Thesis|Misc|Other|PHD Thesis|White Paper|Tech Report|Poster|Manual" peerReviewed="Yes" includeHQP="false" start="{$start_year}-07-01" end="{$this_year}-06-30" limit="15">
                <ReportItem id="row" type="AnnotateProductReportItem" blobSection="PRODUCTS" blobItem="PRODUCT_ANNOTATION" blobType="BLOB_RAW" blobSubItem="{$product_id}" optional="true">
                    <![CDATA[
                        <li style="page-break-inside: avoid;"><b>({$product_type})</b> {$item}</li>
                    ]]>
                </ReportItem>
            </ReportItemSet>
            <Static>
                <![CDATA[
                    </ul><br />
                ]]>
            </Static>
        </If>
        
        <!-- Grants -->
        <If id="grants_if" if="{>({$user_cv_grant_count},0)}">
            <ReportItem id="grantsbookmark" type="BookmarkReportItem" title="Research Funding">
                <![CDATA[
                    <h2>Research Funding</h2>
                    <i>Total funding >= $10k awarded from external sources only and available during the reporting period</i>
                    <table class='wikitable' frame='box' rules='all' width='100%'>
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Sponsor</th>
                                <th>Starts</th>
                                <th>Ends</th>
                                <th>$Total</th>
                            </tr>
                        </thead>
                        <tbody>
                ]]>
            </ReportItem> 
            <ReportItemSet id="grants" type="PersonCVGrantsReportItemSet" start="{$start_year}-07-01" end="{$this_year}-06-30" limit="3">
                <Static>
                    <![CDATA[
                        <tr>
                            <td align='left'>{$grant_project_id}<br />
                                <p>{$grant_scientific_title}</p>
                            </td>
                            <td align='left'>{$grant_sponsor}</td>
                            <td align='center' style='white-space:nowrap;'>{$grant_start_date}</td>
                            <td align='center' style='white-space:nowrap;'>{$grant_end_date}</td>
                            <td align='right'>${$grant_total}</td>
                        </tr>
                    ]]>
                </Static>
            </ReportItemSet>
            <Static>
                <![CDATA[
                    </tbody></table><br />
                ]]>
            </Static>
        </If>
        
        <!-- Footer -->
        <Static>
            <![CDATA[
                <br /><br /><br />
                <div style="page-break-inside:avoid; position: absolute; bottom:0;">
                    <i>Generated: {$timestamp}</i>
                </div>
            ]]>
         </Static>
    </ReportSection>
</Report>
