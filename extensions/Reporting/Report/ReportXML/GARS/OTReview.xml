<?xml version="1.0" encoding="UTF-8" ?>
<Report name="OT Review" reportType="RP_OTT" pdfType="RPTP_OTT" pdfFiles="OTReviewPDF" ajax="true" disabled="false">
    <Permissions>
        <Role role="OT">
            <SectionPermission id="review student" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
    </Permissions>
    <ReportSection id="review student" tooltip="Student Review" name="Review Student" blobSection="OT_REVIEW" type="EditableReportSection" pagebreak="false">
        <ReportItem id="q1" type="RadioReportItem" blobItem="Q1" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" user="{$userId}">
            <![CDATA[
                <h3>Knowledge of OT (accurate; in own words)</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="q2" type="RadioReportItem" blobItem="Q2" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}">
            <![CDATA[
                <h3>Writing skills (no grammatical errors, easy to read, logical)</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="q3" type="RadioReportItem" blobItem="Q3" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}">
            <![CDATA[
                <h3>Develops a compelling argument for a match of their experiences/studies to OT</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="q4" type="RadioReportItem" blobItem="Q4" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}">
            <![CDATA[
                <h3>At least one academic reference, second one appropriate (e.g. not a neighbour, friend)</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="q5" type="RadioReportItem" blobItem="Q5" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}">
            <![CDATA[
                <h3>References were detailed and specific</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="q6" type="RadioReportItem" blobItem="Q6" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}">
            <![CDATA[
                <h3>Positive statements made about critical thinking and strong communication skills</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="q7" type="RadioReportItem" blobItem="Q7" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}">
            <![CDATA[
                <h3>Concerns were raised</h3>
                {$item}
            ]]>
        </ReportItem>

        <ReportItem id="q8" type="TextareaReportItem" blobType="BLOB_TEXT" blobItem="Q8" rich="true" limit="150" blobSubItem="{$project_id}">
            <![CDATA[
                <h3>Please review entire academic record and note any inconsistencies or areas of concern</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="q9" type="RadioReportItem" blobItem="Q9" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}">
            <![CDATA[
                <h3>1+ yrs. volunteer or work experience with children, older adults, persons with disabilities</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="q10" type="RadioReportItem" blobItem="Q10" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}">
            <![CDATA[
                <h3>No clear gaps in work/education history (eg.,graduated with degree, no work or studies in following 6 mon.)</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="q11" type="RadioReportItem" blobItem="Q11" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}">
            <![CDATA[
                <h3>Special considerations that make this application compelling (eg., holds a graduate degee, has publications from undergrad or grad work, undergrad thesis, a student athlete in training/competition or a student in a co-op/work term program who maintained a strong GPA</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="q12" type="TextareaReportItem" blobType="BLOB_TEXT" blobItem="Q12" rich="true" limit="150" blobSubItem="{$project_id}">
            <![CDATA[
                <h3>Overall Comments:</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="q11" type="RadioReportItem" blobItem="Q11" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}">
            <![CDATA[
                <h3>Suggest Admission?</h3>
                {$item}
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="review" tooltip="Review of on-line report content" name="Review" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <ReportItem id="report_review" type="ReviewReportItem">
            <![CDATA[{$item}]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="submit" tooltip="PDF generation of the Review" name="Generate PDF" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <Instructions>
            <![CDATA[

            ]]>
        </Instructions>
        <ReportItem id="review" type="SimpleReviewSubmitReportItem" />
    </ReportSection>

</Report>
