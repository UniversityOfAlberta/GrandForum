<?xml version="1.0" encoding="UTF-8" ?>
<Report name="OTViewReview" reportType="RP_OTT" pdfType="RPTP_OTT" pdfFiles="OTViewReview" ajax="true" disabled="false">
    <Permissions>
        <Role role="Chair">
            <SectionPermission id="review student" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Role role="Faculty">
            <SectionPermission id="review student" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Role role="Manager">
            <SectionPermission id="review student" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
    </Permissions>
    <ReportSection id="review student" tooltip="Student Review" name="Review Student" blobSection="OT_REVIEW" type="EditableReportSection" pagebreak="false">
        <ReportItem id="js" type="StaticReportItem">
            <![CDATA[
            <script type='text/javascript'>
            $('#aboveTabs').hide();
            $('#reportTabs').hide();
            $('#reportHeader').hide();
            $('#reportBody').css('min-height',0);
            </script>
            ]]>
        </ReportItem>
        <ReportItemSet id="if_statement" type="IfReportItemSet" if="{or({contains({$user_full_roles}, Faculty)}, {contains({$user_full_roles}, Chair)})}">
            <ReportItemSet id="header" type="ToggleHeaderReportItemSet" title="{$user_reversed_name}">
                <ReportItem id="table_header" type="StaticReportItem">
                    <![CDATA[
                    <table border="1" style="border-collapse:collapse">
                        <tr style="background-color:#e2dfdf87"><td colspan="2" style="text-align:center"><h3>Statement of Intent & CV</h3></td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q1" type="RadioReportItem" blobItem="Q1" blobType="BLOB_TEXT" options="Accurate understanding|Superficial Understanding" blobSubItem="{$project_id}" user="{$userId}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td style='width:55%' colspan=2>
                     <span 'style=font-size: 14px;'><h3>Knowledge of OT (accurate; in own words):</h3></span><br />{$item}
                    </td></tr></td>
                    ]]>
                </ReportItem>
                <ReportItem id="q2" type="RadioReportItem" blobItem="Q2" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>Writing skills are appropriate eg. no grammatical errors, easy to read, logical:</h3></span><br />
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q3" type="RadioReportItem" blobItem="Q3" blobType="BLOB_TEXT" options="Very compelling|Moderately compelling|Mildly compelling|Not compelling at all" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>Develops a compelling argument for a match of their experiences/studies to OT:</h3></span><br />
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q4" type="RadioReportItem" blobItem="Q4" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>Has relevant volunteer/work and/or life experience with children, older adults, persons with disabilities?:</h3></span><br />
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q5" type="RadioReportItem" blobItem="Q5" blobType="BLOB_TEXT" options="Yes|No|N/A" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>Student explained extenuating or unusual circumstances regarding academic history?:</h3></span><br />
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="header" type="StaticReportItem">
                    <![CDATA[
                        <tr style="background-color:#e2dfdf87"><td colspan="2" style="text-align:center"><h3>Reference Letters</h3></td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q6" type="RadioReportItem" blobItem="Q6" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>Two references required; one academic and the second one appropriate (eg. not a neighbour, friend, relative). IF references missing then Admission is denied.:</h3></span><br />
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q7" type="RadioReportItem" blobItem="Q7" blobType="BLOB_TEXT" options="Yes|No|One did, one didn't" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>References were detailed, specific, gave relevant and positive examples?:</h3></span><br />
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <!--ReportItem id="q8" type="RadioReportItem" blobItem="Q8" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>Positive statements made about critical thinking and strong communication skills?:</h3></span><br />
                        {$item}</td></tr>
                    ]]>
                </ReportItem-->
                <!--ReportItem id="q9" type="TextareaReportItem" blobType="BLOB_TEXT" blobItem="Q9" rich="true" limit="150" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>Please review application documents (CV,Reference Letters, Statement of Intent) and note any inconsistencies or areas of concern:</h3></span>
                        {$item}</td></tr>
                    ]]>
                </ReportItem-->
                <ReportItem id="q11" type="RadioReportItem" blobItem="Q11" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>Special considerations that make this application compelling?:</h3></span><br />
                            {$item}</td></tr>
                        ]]>
                </ReportItem>
                <ReportItem id="q11_comments" type="SelectReportItem" blobItem="Q11_comments" options="N/A| Holds a graduate degree| Has publications from undergrad or grad work|Undergrad thesis|Athlete in training/competition|Artist/musician in training/competition|Student in a co-op/work term program who maintained a strong GPA|Extra ordinary life experiences|Other" width="500px" blobSubItem="{$project_id}" sopBlob="true" orientation="horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>If yes, choose one:</h3></span><br />
                            {$item}</td></tr>
                        ]]>
                </ReportItem>
                <ReportItem id="q112_comments" type="TextareaReportItem" height="200px" blobType="BLOB_TEXT" blobItem="Q112_comments" rich="true" limit="150" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>Comments:</h3></span>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q13" type="RadioReportItem" blobItem="Q13" blobType="BLOB_TEXT" options="Yes|No|Undecided|Special Consideration" blobSubItem="{$project_id}" sopBlob="true" orientation ="horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>Based on all Application Documents do you suggest admission?:</h3></span><br />
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q13_comments" type="TextareaReportItem" height="200px" blobType="BLOB_TEXT" blobItem="Q13_comments" rich="true" limit="150" blobSubItem="{$project_id}" sopBlob="true">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>If choosing Special Consideration please explain below:</h3></span><br />
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q12" type="TextareaReportItem" blobType="BLOB_TEXT" blobItem="Q12" rich="true" limit="150" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span style='font:size 14px;'><h3>Justification for Recommendation:</h3></span>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="table_header" type="StaticReportItem">
                    <![CDATA[
                    </table>
                    ]]>
                </ReportItem>
            </ReportItemSet>
        </ReportItemSet>
        <ReportItemSet id="if_statement" type="IfReportItemSet" if="{or({contains({$user_full_roles}, Faculty)}, {contains({$user_full_roles}, Chair)})}">
            <ReportItem id="table_header" type="StaticReportItem">
                <![CDATA[
                <br />
                ]]>
            </ReportItem>
        </ReportItemSet>
        <ReportItemSet id="if_statement" type="IfReportItemSet" if="{==({$review_count},0)}">
            <ReportItem id="table_header" type="StaticReportItem">
                <![CDATA[
                 No Other Reviews Completed to Display
                ]]>
            </ReportItem>
        </ReportItemSet>
        <ReportItemSet id="professors" type="AllSopReviewerReportItemSet" roles="Professor" sort_reversed="true">
            <ReportItemSet id="if_statement" type="IfReportItemSet" if="{!=({$my_id}, {$user_id})}">
                <ReportItemSet id="header" type="ToggleHeaderReportItemSet" title="{$user_reversed_name}" sop="true">
                    <ReportItem id="feedback_unedit" type="StaticReportItem">
                        <![CDATA[
                        <table border="1" style="border-collapse:collapse">
                        <tr><td colspan='2' style="text-align:center">Statement of Intent & CV</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>Knowledge of OT (accurate; in own words):</h3></span></td><td>{getText(RP_OTT,OT_REVIEW,Q1,{$project_id},{$user_id},{$project_id})}
                        <tr><td><span 'style=font-size: 14px;'><h3>Writing skills are appropriate (no grammatical errors, easy to read, logical):</h3></span></td><td width="30%">
                        {getText(RP_OTT,OT_REVIEW,Q2,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>Develops a compelling argument for a match of their experiences/studies to OT:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q3,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>Has relevant volunteer/work and/or life experience with children, older adults, persons with disabilities?:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q4,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>Student explained extenuating or unusual circumstances regarding academic history?:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q5,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td colspan='2' style="text-align:center">Reference Letters</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>Two references required; one academic and the second one appropriate (eg.not a neighbour, friend, relative). IF references missing then Admission is denied:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q6,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>References were detailed, specific, gave relevant and positive examples?:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q7,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <!--tr><td><span 'style=font-size: 14px;'><h3>Positive statements made about critical thinking and strong communication skills?</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q8,{$project_id},{$user_id},{$project_id})}</td></tr-->
                        <!--tr><td colspan=2><span 'style=font-size: 14px;'><h3>Please review application documents (CV, Reference Letters, Statement of Intent) and note any inconsistencies or areas of concern:</h3></span><br />
                        {getText(RP_OTT,OT_REVIEW,Q9,{$project_id},{$user_id},{$project_id})}</td></tr-->
                        <tr><td><span 'style=font-size: 14px;'><h3>Special considerations that make this application compelling?:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q11,{$project_id},{$user_id},{$project_id})} ({getText(RP_OTT,OT_REVIEW,Q11_comments,{$project_id},{$user_id},{$project_id})})</td></tr>
                        <tr><td colspan=2>Comments:<br />{getText(RP_OTT,OT_REVIEW,Q112_comments,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>Based on all Application Documents do you suggest admission?:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q13,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>If choosing Special Consideration please explain below:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q13_comments,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td colspan=2><span 'style=font-size: 14px;'><h3>Justification for Recommendation:</h3></span>
                        {getText(RP_OTT,OT_REVIEW,Q12,{$project_id},{$user_id},{$project_id})}</td></tr>
                        </table>
                        ]]>
                    </ReportItem>
                    
                </ReportItemSet>
            </ReportItemSet>
        </ReportItemSet>
    </ReportSection>
    <ReportSection id="submit" tooltip="PDF generation of the Review" name="Generate PDF" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <Instructions>
            <![CDATA[
            
            ]]>
        </Instructions>
        <ReportItem id="review" type="SimpleReviewSubmitReportItem" />
    </ReportSection>
    
</Report>
