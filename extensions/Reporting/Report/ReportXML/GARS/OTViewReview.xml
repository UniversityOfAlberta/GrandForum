<?xml version="1.0" encoding="UTF-8" ?>
<Report name="OTViewReview" reportType="RP_OTT" pdfType="RPTP_OTT" pdfFiles="OTViewReview" ajax="true" disabled="false">
    <Permissions>
        <Role role="Manager">
            <SectionPermission id="review student" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Role role="Admin">
            <SectionPermission id="review student" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
    </Permissions>
    <ReportSection id="review student" tooltip="Student Review" name="Review Student" blobSection="OT_REVIEW" type="EditableReportSection" pagebreak="false">
        <ReportItem id="js" type="StaticReportItem">
            <![CDATA[
            <script type='text/javascript'>
            $('#aboveTabs').hide();
            $('#reportTabs').hide();
            $('#reportHeader').hide();
            $('#reportBody').css('min-height',0);
            </script>
            ]]>
        </ReportItem>
        <ReportItemSet id="if_statement" type="IfReportItemSet" if="{contains({$user_full_roles}, Manager)}">
            <ReportItemSet id="header" type="ToggleHeaderReportItemSet" title="{$user_reversed_name}">
                <ReportItem id="table_header" type="StaticReportItem">
                    <![CDATA[
                    <table border="1" style="border-collapse:collapse">
                    ]]>
                </ReportItem>
                <ReportItem id="q1" type="RadioReportItem" blobItem="Q1" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" user="{$userId}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td style='width:70%'><span 'style=font-size: 14px;'><h3>Knowledge of OT (accurate; in own words):</h3></span></td><td>{$item}</td></tr></td>
                    ]]>
                </ReportItem>
                <ReportItem id="q2" type="RadioReportItem" blobItem="Q2" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td><span 'style=font:size 14px;'><h3>Writing skills (no grammatical errors, easy to read, logical):</h3></span></td><td>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q3" type="RadioReportItem" blobItem="Q3" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td><span 'style=font:size 14px;'><h3>Develops a compelling argument for a match of their experiences/studies to OT:</h3></span></td><td>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q4" type="RadioReportItem" blobItem="Q4" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td><span 'style=font:size 14px;'><h3>At least one academic reference, second one appropriate (e.g. not a neighbour, friend):</h3></span></td><td>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q5" type="RadioReportItem" blobItem="Q5" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td><span 'style=font:size 14px;'><h3>References were detailed and specific:</h3></span></td><td>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q6" type="RadioReportItem" blobItem="Q6" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td><span 'style=font:size 14px;'><h3>Positive statements made about critical thinking and strong communication skills:</h3></span></td><td>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q7" type="RadioReportItem" blobItem="Q7" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td><span 'style=font:size 14px;'><h3>Student explained extenuating or unusual circumstances regarding academic history?:</h3></span></td><td>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                
                <ReportItem id="q8" type="TextareaReportItem" blobType="BLOB_TEXT" blobItem="Q8" rich="true" limit="150" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span 'style=font:size 14px;'><h3>Please review entire academic record and note any inconsistencies or areas of concern:</h3></span>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q9" type="RadioReportItem" blobItem="Q9" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td><span 'style=font:size 14px;'><h3>1+ yrs. volunteer or work experience with children, older adults, persons with disabilities:</h3></span></td><td>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q10" type="RadioReportItem" blobItem="Q10" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td><span 'style=font:size 14px;'><h3>No clear gaps in work/education history (e.g. Graduated with Degree, no work or studies in following 6 mon.):</h3></span></td><td>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q11" type="RadioReportItem" blobItem="Q11" blobType="BLOB_TEXT" options="Yes|No" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td><span 'style=font:size 14px;'><h3>Special considerations that make this application compelling (e.g. holds a graduate degree, has publications from undergrad or grad work, undergrad thesis, a student athlete in training/competition or a student in
                        a co-op/work term program who maintained a strong GPA):</h3></span></td><td>
                            {$item}</td></tr>
                        ]]>
                </ReportItem>
                <ReportItem id="q13" type="RadioReportItem" blobItem="Q13" blobType="BLOB_TEXT" options="Yes|No|Undecided" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td><span 'style=font:size 14px;'><h3>Suggest Admission?:</h3></span></td><td>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="q12" type="TextareaReportItem" blobType="BLOB_TEXT" blobItem="Q12" rich="true" limit="150" blobSubItem="{$project_id}" sopBlob="true" orientation = "horizontal">
                    <![CDATA[
                    <tr><td colspan=2><span 'style=font:size 14px;'><h3>Justification for Recommendation:</h3></span>
                        {$item}</td></tr>
                    ]]>
                </ReportItem>
                <ReportItem id="table_header" type="StaticReportItem">
                    <![CDATA[
                    </table>
                    ]]>
                </ReportItem>
            </ReportItemSet>
        </ReportItemSet>
        <ReportItemSet id="professors" type="AllSopReviewerReportItemSet" roles="Professor" sort_reversed="true">
            <ReportItemSet id="if_statement" type="IfReportItemSet" if="{!=({$my_id}, {$user_id})}">
                <ReportItemSet id="header" type="ToggleHeaderReportItemSet" title="{$user_reversed_name}" sop="true">
                    <ReportItem id="feedback_unedit" type="StaticReportItem">
                        <![CDATA[
				                        <table border="1" style="border-collapse:collapse">
                        <tr><td><span 'style=font-size: 14px;'><h3>Knowledge of OT (accurate; in own words):</h3></span></td><td>{getText(RP_OTT,OT_REVIEW,Q1,{$project_id},{$user_id},{$project_id})}
                        <tr><td><span 'style=font-size: 14px;'><h3>Writing skills (no grammatical errors, easy to read, logical):</h3></span></td><td width="30%">
                        {getText(RP_OTT,OT_REVIEW,Q2,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>Develops a compelling argument for a match of their experiences/studies to OT:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q3,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>At least one academic reference, second one appropriate (e.g. not a neighbour, friend):</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q4,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>References were detailed and specific:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q5,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>Positive statements made about critical thinking and strong communication skills:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q6,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>Student explained extenuating or unusual circumstances regarding academic history?:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q7,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td colspan=2><span 'style=font-size: 14px;'><h3>Please review entire academic record and note any inconsistencies or areas of concern:</h3></span>
                        {getText(RP_OTT,OT_REVIEW,Q8,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>1+ yrs. volunteer or work experience with children, older adults, persons with disabilities:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q9,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>No clear gaps in work/education history (e.g. Graduated with degree, no work or studies in following 6 mon.):</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q10,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>Special considerations that make this application compelling (e.g. Holds a graduate degree, has publications from undergrad or grad work, undergrad thesis, a student athlete in training/competition or a student in a co-op/work term program who maintained a strong GPA):</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q11,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td><span 'style=font-size: 14px;'><h3>Suggest Admission?:</h3></span></td><td>
                        {getText(RP_OTT,OT_REVIEW,Q13,{$project_id},{$user_id},{$project_id})}</td></tr>
                        <tr><td colspan=2><span 'style=font-size: 14px;'><h3>Justification for Recommendation:</h3></span>
                        {getText(RP_OTT,OT_REVIEW,Q12,{$project_id},{$user_id},{$project_id})}</td></tr>
                        </table>
                        ]]>
                    </ReportItem>
                    
                </ReportItemSet>
            </ReportItemSet>
        </ReportItemSet>
    </ReportSection>
    <ReportSection id="submit" tooltip="PDF generation of the Review" name="Generate PDF" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <Instructions>
            <![CDATA[
            
            ]]>
        </Instructions>
        <ReportItem id="review" type="SimpleReviewSubmitReportItem" />
    </ReportSection>
    
</Report>
