<?xml version="1.0" encoding="UTF-8" ?>
<Report name="PIReport" reportType="RP_PI_REPORT" pdfFiles="PIReportPDF" ajax="true">
    <Permissions>
        <Role start="REPORTING_CYCLE_START" end="REPORTING_CYCLE_END" role="NI">
            <SectionPermission id="information" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
    </Permissions>
    <ReportSection id='pi_report' type='EditableReportSection' title='Quantum Report' name='Quantum Report' blobSection="QUANTUM_REVIEW">
	<ReportItem id="start_date" type="CalendarReportItem" blobItem="PI_REPORT_START" blobType="BLOB_TEXT">
	    <![CDATA[
        <table><tr>
            <td align='right'>Start Date:</td><td> {$item}</td>
	    ]]>
	</ReportItem>
        <ReportItem id="end_date" type="CalendarReportItem" blobItem="PI_REPORT_END" blobType="BLOB_TEXT">
            <![CDATA[
		</tr><tr><td align='right'>
                End Date:</td><td> {$item}</td></tr></table>
        <br />
		<script type='text/javascript'>
				$(document).ready(function () {
    				    $('input[name=QuantumReport_start_date]').change(function () {
        			        refreshIframe();
    				    });
				});
				$(document).ready(function () {
    				    $('input[name=QuantumReport_end_date]').change(function () {
        			        refreshIframe();
    				    });
				});

				function refreshIframe() {
				    $('[name=submit]').click();
                    setTimeout(function () {
                        $('#previewFrame').attr("src", $('#previewFrame').attr("src"));
                    }, 2000);
				}
		</script>
            ]]>
        </ReportItem>
        <ReportItem id="report_review" type="ReviewReportItem">
            <![CDATA[{$item}]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="submit" tooltip="PDF generation and submission to the RMC" name="Submit" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <Instructions>
            <![CDATA[
            ]]>
        </Instructions>
        <ReportItem id="review" type="SimpleReviewSubmitReportItem" />
    </ReportSection>
</Report>
