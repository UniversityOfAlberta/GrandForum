<?xml version="1.0" encoding="UTF-8" ?>
<Report name="Project Report" reportType="RP_PROJECT_REPORT_{GET(id)}" pdfType="RP_PROJECT_REPORT_{GET(id)}" year="0" personId="0" ajax="true" disabled="false">
    <ReportSection id="report" type="NextPrevReportSection" name="Project Report" title="{$project_full_name} ({$project_name})&lt;br /&gt;{replace(Q,R,{replace(_,:,{GET(id)})})} Report" pagebreak="false">
        <!-- Team Information -->
        <Static>
            <![CDATA[
                <p style='margin-top:0.5em;'><b>Leader(s):</b> {$project_leaders}</p>
                <p><b>Team Members:</b> {$project_members}</p>
                <br />
                <b>Project Summary</b>
                {project_description(summary)}
            ]]>
        </Static>
        <!-- Start the Report -->
        <ReportItem id="description" type="Textarea" blobItem="DESCRIPTION" rich="true">
            <![CDATA[
                <h3 style='margin-top:1em;'>1. Description of work and next steps</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="edi" type="Textarea" blobItem="EDI" rich="true">
            <![CDATA[
                <h3>2. Equity, diversity, and inclusion update</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="challenges" type="Textarea" blobItem="CHALLENGES" rich="true">
            <![CDATA[
                <h3>3. Identified or anticipated challenges (if any)</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="adjustments" type="Textarea" blobItem="ADJUSTMENTS" rich="true">
            <![CDATA[
                <h3>4. Milestones adjustments</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="ktee" type="Textarea" blobItem="KTEE" rich="true">
            <![CDATA[
                <h3>5. Knowledge mobilization and community engagement</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="changes" type="Textarea" blobItem="CHANGES" rich="true">
            <![CDATA[
                <h3>6. Changes in the research team</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="findings" type="Textarea" blobItem="FINDINGS" rich="true">
            <![CDATA[
                <h3>7. Preliminary findings</h3>
                {$item}
            ]]>
        </ReportItem>
        
        <ReportItem id="awards" type="Radio" blobItem="AWARDS" options="Yes|No">
            <![CDATA[
                <h3>8. Did you or anyone on your project team receive any awards or recognitions?</h3>
                {$item}
            ]]>
        </ReportItem>
        <If if="{==({getText(RP_PROJECT_REPORT_{GET(id)}, SEC_NONE, AWARDS, 0, 0, {$project_id})}, Yes)}">
            <ReportItem id="awards_yes" type="Textarea" blobItem="AWARDS_YES" rich="true">
                <![CDATA[
                    {$item}
                ]]>
            </ReportItem>
        </If>
        
        <ReportItem id="grants" type="Radio" blobItem="GRANTS" options="Yes|No">
            <![CDATA[
                <br />
                <h3>9. Did you or anyone on your project team receive any new grants from SSHRC, NSERC, CFI, or any other granting bodies?</h3>
                {$item}
            ]]>
        </ReportItem>
        <If if="{==({getText(RP_PROJECT_REPORT_{GET(id)}, SEC_NONE, GRANTS, 0, 0, {$project_id})}, Yes)}">
            <ReportItem id="grants_yes" type="Textarea" blobItem="GRANTS_YES" rich="true">
                <![CDATA[
                    {$item}
                ]]>
            </ReportItem>
        </If>
    </ReportSection>
    <ReportSection id="publications" type="EditableReportSection" name="Outputs" title="Outputs" blobSection="OUTPUTS" pagebreak="false" delete="true">
        <!-- Publications -->
        <ReportItem id="publications" type="Radio" blobItem="PUBLICATIONS" options="Yes|No">
            <![CDATA[
                <h3>Have you or your team published or produced any academic or non-academic publications?</h3>
                {$item}
            ]]>
        </ReportItem>
        <If if="{==({getText(RP_PROJECT_REPORT_{GET(id)}, OUTPUTS, PUBLICATIONS, 0, 0, {$project_id})}, Yes)}">
            <Static>
                <![CDATA[
                    <table class='wikitable small' frame='box' rules='all' style='width:100%;'>
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Title</th>
                                <th>Date</th>
                                <th>Link</th>
                                <th>Citation</th>
                            </tr>
                        </thead>
                        <tbody>
                ]]>
            </Static>
            <ReportItemSet type="ProjectProducts" start="{projectReportStartDate({GET(id)})}" end="{projectReportEndDate({GET(id)})}" category="Publication">
                <Static>
                    <![CDATA[
                        <tr>
                            <td>{$product_type}</td>
                            <td valign='top'>{$product_title}</td>
                            <td style='white-space: nowrap;'>{date_format({strtotime({$product_date})}, M Y)}</td>
                            <td>{if("{getProductData(url)}" != "", <a class='externalLink' href='{getProductData(url)}'>Link</a>)}</td>
                            <td valign='top'>{$product_citation}</td>
                        </tr>
                    ]]>
                </Static>
            </ReportItemSet>
            <Static>
                <![CDATA[
                        </tbody>
                    </table>
                ]]>
            </Static>
        </If>
        
