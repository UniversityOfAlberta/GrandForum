<?xml version="1.0" encoding="UTF-8" ?>
<Report name="Project Report: {$project_name} - {$project_full_name}" reportType="RP_PROJECT_REPORT_{GET(id)}" pdfType="RP_PROJECT_REPORT_{GET(id)}" pdfFiles="ProjectReportPDF" year="0" personId="0" ajax="true" disabled="false">
    <Permissions>
        <Role role="Staff+">
            <SectionPermission id="report" permissions="rw" />
            <SectionPermission id="publications" permissions="rw" />
            <SectionPermission id="publications2" permissions="rw" />
            <SectionPermission id="people" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Role role="PL">
            <SectionPermission id="report" permissions="rw" />
            <SectionPermission id="publications" permissions="rw" />
            <SectionPermission id="publications2" permissions="--" />
            <SectionPermission id="people" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Role role="PS">
            <SectionPermission id="report" permissions="rw" />
            <SectionPermission id="publications" permissions="rw" />
            <SectionPermission id="publications2" permissions="--" />
            <SectionPermission id="people" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Project />
        <If if="{!matches({GET(id)},^[0-9][0-9][0-9][0-9]_Q[1-4])}">
            <SectionPermission id="report" permissions="--" />
            <SectionPermission id="publications" permissions="--" />
            <SectionPermission id="publications2" permissions="--" />
            <SectionPermission id="people" permissions="--" />
            <SectionPermission id="submit" permissions="--" />
        </If>
    </Permissions>
    <ReportSection id="report" type="EditableReportSection" name="Project Report" title="{$project_name}: {$project_full_name}" saveText="Save as Draft">
        <!-- Variables -->
        <Static>
            {set(year,    {substr({GET(id)}, 0, 4)})}
            {set(quarter, {substr({GET(id)}, 6, 1)})}
        </Static>
        <If if="{==({get(quarter)},1)}">
            <![CDATA[
                <h3>{get(year)}:R{get(quarter)} Report - Submit by: February 15, {get(year)}</h3>
            ]]>
        </If>
        <ElseIf if="{==({get(quarter)},2)}">
            <![CDATA[
                <h3>{get(year)}:R{get(quarter)} Report - Submit by: June 15, {get(year)}</h3>
            ]]>
        </ElseIf>
        <ElseIf if="{==({get(quarter)},3)}">
            <![CDATA[
                <h3>{get(year)}:R{get(quarter)} Report - Submit by: October 15, {get(year)}</h3>
            ]]>
        </ElseIf>
        <!-- Past Reports -->
        <Static>
            <![CDATA[
                <div class="pdfnodisplay">
                <h3>Past Reports</h3>
                <table class="wikitable">
                    <tr>
            ]]>
        </Static>
        <!-- Year Header -->
        <For from="{$project_start}" to="{timestamp(Y)}">
            <If if="{>=({$getExtra},2024)}">
                <![CDATA[
                    <th colspan='3'>{$getExtra}</th>
                ]]>
            </If>
            <Else>
                <![CDATA[
                    <th colspan='4'>{$getExtra}</th>
                ]]>
            </Else>
        </For>
        <Static>
            <![CDATA[
                    </tr>
                    <tr>
            ]]>
        </Static>
        <!-- Quarter Header -->
        <For from="{$project_start}" to="{timestamp(Y)}">
            <Static>
                <![CDATA[
                    {set(y, {$getExtra})}
                ]]>
            </Static>
            <If if="{>=({$getExtra},2024)}">
                <For from="1" to="3">
                    <Static>
                        <![CDATA[
                            {set(q, {$getExtra})}
                            <th>R{get(q)}</th>
                        ]]>
                    </Static>
                </For>
            </If>
            <Else>
                <For from="1" to="4">
                    <Static>
                        <![CDATA[
                            {set(q, {$getExtra})}
                            <th>R{get(q)}</th>
                        ]]>
                    </Static>
                </For>
            </Else>
        </For>
        <Static>
            <![CDATA[
                    </tr>
                    <tr>
            ]]>
        </Static>
        <!-- PDF Rows -->
        <For from="{$project_start}" to="{timestamp(Y)}">
            <Static>
                <![CDATA[
                    {set(y, {$getExtra})}
                ]]>
            </Static>
            <If if="{>=({$getExtra},2024)}">
                <For from="1" to="3">
                    <Static>
                        <![CDATA[
                            {set(q, {$getExtra})}
                        ]]>
                    </Static>
                    <ReportItem id="pdf" type="PDFReportItem" buttonName="&lt;img src='{$wgServer}{$wgScriptPath}/skins/pdf.gif' />" class="" project="true" reportType="ProjectReport" pdfType="RP_PROJECT_REPORT_{get(y)}_Q{get(q)}" year="0" showWord="true">
                        <![CDATA[
                            <td style='padding-left:0.5em; padding-right:0.5em;'>{$item}</td>
                        ]]>
                    </ReportItem>
                </For>
            </If>
            <Else>
                <For from="1" to="4">
                    <Static>
                        <![CDATA[
                            {set(q, {$getExtra})}
                        ]]>
                    </Static>
                    <ReportItem id="pdf" type="PDFReportItem" buttonName="&lt;img src='{$wgServer}{$wgScriptPath}/skins/pdf.gif' />" class="" project="true" reportType="ProjectReport" pdfType="RP_PROJECT_REPORT_{get(y)}_Q{get(q)}" year="0" showWord="true">
                        <![CDATA[
                            <td style='padding-left:0.5em; padding-right:0.5em;'>{$item}</td>
                        ]]>
                    </ReportItem>
                </For>
            </Else>
        </For>
        <Static>
            <![CDATA[
                    </tr>
                </table>
                </div>
            ]]>
        </Static>
        
        <!-- Start the Report -->
        <ReportItem id="description" type="Textarea" blobItem="DESCRIPTION" rich="true">
            <![CDATA[
                <h3>Project Summary <small style='font-weight: normal; font-size: 0.695em'>(From <a href='{$project_url}' target='_blank'>Project Profile</a>)</small></h3>
                {project_description(summary)}
                <h3>1. Description of work and next steps</h3>
                <p>General description of the activities performed in the past 4 months in relation to the overall goals, objectives, and timelines of the project, mentioning any notable administrative or research outcome. Briefly explain next steps.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="edi" type="Textarea" blobItem="EDI" rich="true">
            <![CDATA[
                <h3>2. Equity, diversity, and inclusion update</h3>
                <p>Mention any challenges, opportunities or lessons learnt that are relevant to EDI in your research activities or in relation to the project team.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="challenges" type="Textarea" blobItem="CHALLENGES" rich="true">
            <![CDATA[
                <h3>3. Identified or anticipated challenges (if any)</h3>
                <p>If relevant, explain any challenges or concerns that have been identified during the past 3 months, including anticipated ones, and possible solutions to address them.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="adjustments" type="Textarea" blobItem="ADJUSTMENTS" rich="true">
            <![CDATA[
                <h3>4. Milestones adjustments</h3>
                <p>Have you modified your project milestones because of activities/ challenges youâ€™ve encountered in the past 4 months? If so, provide a brief description of the changes and the rationale that supports them.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="ktee" type="Textarea" blobItem="KTEE" rich="true">
            <![CDATA[
                <h3>5. Knowledge mobilization and community engagement</h3>
                <p>Have there been any updates regarding knowledge mobilization or community engagement in the past 4 months? Please provide a brief description of activities to include the type of organization or sector (public, private, not-for-profit), location or country (Canadian, international) and type of engagement (data collection, event). Please specify if you have engaged with a Canadian Indigenous Organization.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="changes" type="Textarea" blobItem="CHANGES" rich="true">
            <![CDATA[
                <h3>6. Changes in the research team</h3>
                <p>Have there been any changes to the research team in the past 4 months? This includes new HQP or affiliated researchers, extension or termination of contracts etc. For new team members, please add them as members on the Forum including their first and last names, roles, institutions, contract start and end dates, and position.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="findings" type="Textarea" blobItem="FINDINGS" rich="true">
            <![CDATA[
                <h3>7. Preliminary findings</h3>
                <p>Have there been any significant preliminary findings or results from your research in the past 4 months? Please provide a brief summary of key insights, trends, or outcomes observed so far.</p>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="awards" type="Radio" blobItem="AWARDS" options="Yes|No">
            <![CDATA[
                <h3>8. Did you or anyone on your project team receive any awards or recognitions?</h3>
                <div id='awards'>{$item}</div>
            ]]>
        </ReportItem>
        <ReportItem id="awards_yes" type="Textarea" blobItem="AWARDS_YES" rich="true">
            <![CDATA[
                <div id='awards_yes' style='display:none;'>{$item}</div>
                <script type='text/javascript'>
                    $('#awards input').change(function(){
                        if($('#awards input:checked').val() == "Yes"){
                            $('#awards_yes').slideDown();
                        }
                        else {
                            $('#awards_yes').slideUp();
                        }
                    }).change();
                </script>
            ]]>
        </ReportItem>
        <ReportItem id="grants" type="Radio" blobItem="GRANTS" options="Yes|No">
            <![CDATA[
                <h3>9. Did you or anyone on your project team receive any new grants from SSHRC, NSERC, CFI, or any other granting bodies?</h3>
                <div id='grants'>{$item}</div>
            ]]>
        </ReportItem>
        <ReportItem id="grants_yes" type="Textarea" blobItem="GRANTS_YES" rich="true">
            <![CDATA[
                <div id='grants_yes' style='display:none;'>{$item}</div>
                <script type='text/javascript'>
                    $('#grants input').change(function(){
                        if($('#grants input:checked').val() == "Yes"){
                            $('#grants_yes').slideDown();
                        }
                        else {
                            $('#grants_yes').slideUp();
                        }
                    }).change();
                </script>
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="publications" type="ReportSection" name="Outputs" title="Outputs">
        <ReportItem id="publications" type="ManageProductsReportItem">
            <![CDATA[
                {$item}
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="people" type="ReportSection" name="People" title="People">
        <ReportItem id="people" type="ManagePeopleReportItem">
            <![CDATA[
                {$item}
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="publications_new" type="EditableReportSection" name="New Outputs" title="New Outputs" blobSection="OUTPUTS">
        <Static>
            <![CDATA[
                <p><b>Note:</b> All outputs are shown in the tables below, however only those with dates between {projectReportStartDate({GET(id)})} and {projectReportEndDate({GET(id)})} will be shown in the submitted pdf.</p> 
                <h2>In last 6 months</h2>
            ]]>
        </Static>
        
        <!-- Publications -->
        <ReportItem id="publications" type="Radio" blobItem="PUBLICATIONS" options="Yes|No">
            <![CDATA[
                <h3>Have you or your team published or produced any academic or non-academic publications?</h3>
                <div id='publications_q'>{$item}</div>
            ]]>
        </ReportItem>
        <ReportItem id="publications_table" type="ManageProductsReportItem" categories="Publication">
            <![CDATA[
                <div id='publications' style='display:none;'>
                    {$item}
                </div>
                <script type='text/javascript'>
                    $('#publications_q input').change(function(){
                        var val = $('#publications_q input:checked').val();
                        if(val == 'Yes'){
                            $('#publications').slideDown();
                        }
                        else{
                            $('#publications').slideUp();
                        }
                    }).change();
                </script>
            ]]>
        </ReportItem>
        
        <!-- Conferences -->
        <ReportItem id="conferences" type="Radio" blobItem="CONFERENCES" options="Yes|No">
            <![CDATA[
                <h3>Have you or your team presented, chaired, or contributed to any conferences, panels, or symposiums?</h3>
                <div id='conferences_q'>{$item}</div>
            ]]>
        </ReportItem>
        <ReportItem id="conferences_table" type="ManageProductsReportItem" categories="Conference">
            <![CDATA[
                <div id='conferences' style='display:none;'>
                    {$item}
                </div>
                <script type='text/javascript'>
                    $('#conferences_q input').change(function(){
                        var val = $('#conferences_q input:checked').val();
                        if(val == 'Yes'){
                            $('#conferences').slideDown();
                        }
                        else{
                            $('#conferences').slideUp();
                        }
                    }).change();
                </script>
            ]]>
        </ReportItem>
        
        <!-- Events -->
        <ReportItem id="events" type="Radio" blobItem="EVENTS" options="Yes|No">
            <![CDATA[
                <h3>Have you or your team organized or participated in any public or internal events (e.g., workshops, consultations etc...)?</h3>
                <div id='events_q'>{$item}</div>
            ]]>
        </ReportItem>
        <ReportItem id="events_table" type="ManageProductsReportItem" categories="Event">
            <![CDATA[
                <div id='events' style='display:none;'>
                    {$item}
                </div>
                <script type='text/javascript'>
                    $('#events_q input').change(function(){
                        var val = $('#events_q input:checked').val();
                        if(val == 'Yes'){
                            $('#events').slideDown();
                        }
                        else{
                            $('#events').slideUp();
                        }
                    }).change();
                </script>
            ]]>
        </ReportItem>
        
        <!-- Awards -->
        <ReportItem id="awards" type="Radio" blobItem="AWARDS" options="Yes|No">
            <![CDATA[
                <h3>Have you or your team received any awards, stipends, or research funding?</h3>
                <div id='awards_q'>{$item}</div>
            ]]>
        </ReportItem>
        <ReportItem id="awards_table" type="ManageProductsReportItem" categories="Award">
            <![CDATA[
                <div id='awards' style='display:none;'>
                    {$item}
                </div>
                <script type='text/javascript'>
                    $('#awards_q input').change(function(){
                        var val = $('#awards_q input:checked').val();
                        if(val == 'Yes'){
                            $('#awards').slideDown();
                        }
                        else{
                            $('#awards').slideUp();
                        }
                    }).change();
                </script>
            ]]>
        </ReportItem>
        
        <!-- Partnerships/Collaborations -->
        <ReportItem id="partners" type="Radio" blobItem="PARTNERS" options="Yes|No">
            <![CDATA[
                <h3>Have you or your team developed or maintained any formal or informal partnerships or collaborations?</h3>
                <div id='partners_q'>{$item}</div>
            ]]>
        </ReportItem>
        <ReportItem id="partners_table" type="ManageProductsReportItem" categories="Partnership">
            <![CDATA[
                <div id='partners' style='display:none;'>
                    <h4>Parterships</h4>
                    {$item}
            ]]>
        </ReportItem>
        <ReportItem id="collaborations_table" type="ManageProductsReportItem" categories="Collaboration">
            <![CDATA[
                    <h4>Collaborations</h4>
                    {$item}
                </div>
                <script type='text/javascript'>
                    $('#partners_q input').change(function(){
                        var val = $('#partners_q input:checked').val();
                        if(val == 'Yes'){
                            $('#partners').slideDown();
                        }
                        else{
                            $('#partners').slideUp();
                        }
                    }).change();
                </script>
            ]]>
        </ReportItem>
        
        <!-- Research Outputs -->
        <ReportItem id="research1" type="Radio" blobItem="RESEARCH1" options="Yes|No">
            <![CDATA[
                <h3>Have you or your team created or updated any research outputs, data tools, dashboards, or digital storytelling projects?</h3>
                <div id='research1_q'>{$item}</div>
            ]]>
        </ReportItem>
        <ReportItem id="research1_table" type="ManageProductsReportItem" categories="Research Output">
            <![CDATA[
                <div id='research1' style='display:none;'>
                    {$item}
                </div>
                <script type='text/javascript'>
                    $('#research1_q input').change(function(){
                        var val = $('#research1_q input:checked').val();
                        if(val == 'Yes'){
                            $('#research1').slideDown();
                        }
                        else{
                            $('#research1').slideUp();
                        }
                    }).change();
                </script>
            ]]>
        </ReportItem>
        
        <!-- Research Activity -->
        <ReportItem id="research2" type="Radio" blobItem="RESEARCH2" options="Yes|No">
            <![CDATA[
                <h3>Have you or your team conducted any research activities such as fieldwork, experiments, or community engagement?</h3>
                <div id='research2_q'>{$item}</div>
            ]]>
        </ReportItem>
        <ReportItem id="research2_table" type="ManageProductsReportItem" categories="Research Activity">
            <![CDATA[
                <div id='research2' style='display:none;'>
                    {$item}
                </div>
                <script type='text/javascript'>
                    $('#research2_q input').change(function(){
                        var val = $('#research2_q input:checked').val();
                        if(val == 'Yes'){
                            $('#research2').slideDown();
                        }
                        else{
                            $('#research2').slideUp();
                        }
                    }).change();
                </script>
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="submit" tooltip="PDF generation and submission" name="Submit" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <ReportItem id="review" type="SimpleReviewSubmitReportItem" emails="{$my_email},{$project_theme_lead_emails}" />
    </ReportSection>
</Report>
