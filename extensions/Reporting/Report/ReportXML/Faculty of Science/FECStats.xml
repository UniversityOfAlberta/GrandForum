<?xml version="1.0" encoding="UTF-8" ?>
<Report name="FECStats" reportType="RP_FEC" pdfFiles="FECStats" ajax="true">
    <Permissions>
        <Role role="RMC">
            <SectionPermission id="information" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Role role="ISAC">
             <SectionPermission id="information" permissions="r" />
             <SectionPermission id="review" permissions="" />
             <SectionPermission id="submit" permissions="" />
        </Role>
    </Permissions>
    <ReportSection id="reviews" tooltip="Reviews" name="Reviews" title="Reviews" blobSection="FEC_REVIEW" type="EditableReportSection">
	<ReportItem id="header" type="StaticReportItem">
	    <![CDATA[
	        <table id='fec_table' style='width:100%;' frame=box rules=all><thead><tr>
	        <th>Name</th>
	        <th>Dept</th>
	        <th>Pos</th>
	        <th>Pubs</th>
	        <th>Masters /PhD</th>
	        <th>PDF /RA</th>
	        <th>Grants</th>
	        <th>Grant Total</th>
	        <th>Increment</th>
	        <th>Tenure</th>
	        <th>Promotion</th>
	        </tr></thead><tbody>
	    ]]>
	</ReportItem>
	    <ReportItemSet id="professors" type="AllPeopleReportItemSet" sort_reversed="true" roles="Faculty">
		    <ReportItem id="linkAR" type="PDFReportItem" reportType="FEC" class="" showIfNull="true" buttonName="{$user_reversed_name}">
		    	<![CDATA[
		    	   <tr><td>{$item}
		    	]]>
		    </ReportItem>
		    <ReportItem id="linkComments" type="StaticReportItem">
		        <![CDATA[
		               <div id='comments_{$user_id}' style="display:none;" title='FEC Comments for {$user_reversed_name}'>
		                   <table class='dashboard wikitable'><thead>
		                       <tr><th>Section</th>
		                       <th>Comment</th></tr></thead><tbody>
		                       <tr><td>Teaching Evaluations</td><td class='comments'>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_TEACHING_EVALUATION,{$user_id},{$chair_id},0)}</td></tr>
		                       <tr><td>Research Evaluations</td><td class='comments'>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_RESEARCH_EVALUATION,{$user_id},{$chair_id},0)}</td></tr>
		                       <tr><td colspan="2" align=center>Service/Committees Evaluations</td></tr>
		                       <tr><td>Departmental</td><td class='comments'>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_DEPARTMENTAL,{$user_id},{$chair_id},0)}</td></tr>
		                       <tr><td>Faculty</td><td class='comments'>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_FACULTY,{$user_id},{$chair_id},0)}</td></tr>
		                       <tr><td>University</td><td class='comments'>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_UNIVERSITY,{$user_id},{$chair_id},0)}</td></tr>
		                       <tr><td>Scientific</td><td class='comments'>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_SCIENTIFIC,{$user_id},{$chair_id},0)}</td></tr>
		                       <tr><td>Community Outreach</td><td class='comments'>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_COMMUNITY,{$user_id},{$chair_id},0)}</td></tr>
		                       <tr><td>Other</td><td class='comments'>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_OTHER,{$user_id},{$chair_id},0)}</td></tr>
		                       <tr><td>Comments</td><td class='comments'><p id="fec_comments_row{$user_id}">{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_COMMENTS,{$user_id},{$chair_id},0)}</p></td></tr>
		                       </tbody>
		                   </table>
		               </div>
		               <p id="comment_link{$user_id}"></p>
		               <script type='text/javascript'>
		               var link = "";
		               var interval{$user_id} = setInterval(function(){
		               	    if ($('#comment_link{$user_id}').is(':visible') && !$('#fec_comments_row{$user_id}').is(':empty')){
		               	        link = "<a href='#!' class=button onclick=\"$('#comments_{$user_id}').dialog({width:'1100px', position:{ my:'center', at:'center', of:window}})\">Chair</a>";
		               	        document.getElementById("comment_link{$user_id}").innerHTML = link;
		               	        clearInterval(interval{$user_id});
		               	        interval{$user_id} = null;
		               	    }
			       }, 100);
		               </script>
			   </td>
		        ]]>
		    </ReportItem>
		    <ReportItem id="row" type="StaticReportItem">
		        <![CDATA[
		            <td>{$user_dept}</td>
		            <td>{$user_level}</td>
		            <td align=right>{$user_product_count}</td>
		            <td align=right>{$user_grad_count}</td>
		            <td align=right>{$user_fellow_count}</td>
		            <td align=right>{$user_grant_count}</td>
		            <td align=right>${$user_grant_total}</td>
		            <td>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_RECOMMENDATIONS_INCREMENT,{$user_id},{$chair_id},0)}</td>
		            <td></td>
		            <td></td></tr>
		        ]]>
		    </ReportItem>
	    </ReportItemSet>
	<ReportItem id="footer" type="StaticReportItem">
	    <![CDATA[
	        </tbody></table><script type='text/javascript'>
	                                $('#fec_table').dataTable({
	                                    "iDisplayLength": 50
	                                      });
	                                        </script>
	    ]]>
	</ReportItem>
    </ReportSection>
    <ReportSection id="review" tooltip="Review of on-line report content" name="Review" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <ReportItem id="report_review" type="ReviewReportItem">
            <![CDATA[{$item}]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="submit" tooltip="PDF generation and submission to the RMC" name="Submit" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <Instructions>
            <![CDATA[

            ]]>
        </Instructions>
        <ReportItem id="review" type="ReviewSubmitReportItem" />
    </ReportSection>
</Report>
