                    <table class='wikitable' frame='box' rules='all' width='100%'>
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Award Category</th>
                                <th>Awarded By</th>
                                <th>Scope</th>
                                <th>Years</th>
                            </tr>
                        </thead>
                ]]>
            </ReportItem>
            <ReportItemSet id="awards" type="PersonProductsReportItemSet" category="Award" includeHQP="false" start="{$start_year}-07-01" end="{$this_year}-06-30">
                <ReportItem id="row" type="StaticReportItem">
                    <![CDATA[
                        <tr>
                            <td>{$product_title}</td>
                            <td align='left'>{$product_type}</td>
                            <td align='left'>{$award_by}</td>
                            <td align='left'>{$award_scope}</td>
                            <td align='center'>{$product_year_range}</td>
                        </tr>
                    ]]>
                </ReportItem>
            </ReportItemSet>
            <ReportItem id="awardfooter" type="StaticReportItem">
                <![CDATA[
                    </table><br />
                ]]>
            </ReportItem>
        </ReportItemSet>
        
        <!-- Courses Taught -->
        <ReportItemSet id="courses_if" type="If" if="{>({$user_courses_count},0)}">
