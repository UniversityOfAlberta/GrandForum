<?xml version="1.0" encoding="UTF-8" ?>
<Report name="FEC" reportType="RP_FEC" pdfType="RPTP_FEC" ajax="true">
    <ReportSection id="information" tooltip="Information" name="Information" title="Annual Report of Faculty Member - Faculty of Science" blobSection="FEC_INFORMATION" type="EditableReportSection" pagebreak="false">
        <ReportItem id="information" type="StaticReportItem">
            <![CDATA[
                <table style="line-height:1.75em;">
                    <tr>
                        <td style='width:60%'>
                            <table width="100%" class='wikitable'>
                                <tr><td>Name:&nbsp;<b>{$user_name}</b></td></tr>
                                <tr><td>Rank:&nbsp;<b>{$user_level}</b></td></tr>
                                <tr><td>Department:&nbsp;<b>{$user_dept}</b></td></tr>
                                <tr><td>Year of PhD:&nbsp;<b>{$user_phd_year}</b></td></tr>
                                <tr><td>Year of Appointment:&nbsp;<b>{$user_appointment_year}</b></td></tr>
                                <tr><td>Graduate Students(Supervised or Co-supervised):&nbsp;<b>{$user_grad_count}</td></b></tr>
                                <tr><td>Post-doctoral Fellows and Research Associates (Supervised or Co-supervised):&nbsp;<b>{$user_fellow_count}</b></tr></td>
                                <tr><td>Technicians:&nbsp;<b>{$user_tech_count}</b></tr></td>
                                <tr><td>Undergraduates (Supervised or Co-supervised):&nbsp;<b>{$user_ugrad_count}</b></tr></td>
                            </table>
                        </td>
                        <td>
                            <center><b>Period: July {$start_year} to June {$this_year}</b></center><p style="font-size:0.8em;line-height:1.5em;">A staff member is required to submit an annual report covering the staff member's activities during the previous year; see Faculty Agreement or FSO Agreement. The information submited will be used in arriving at decisions regrading salaries, tenure, and promotion.</p></center>
                            <table width="100%">
                                <tr>
                                    <th></th>
                                    <th>Refereed</th>
                                    <th>Books</th>
                                    <th>Patents</th>
                                </tr>
                                <tr>
                                    <td><b>{subtract({$this_year},1)}/{$this_year}</b></td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},1)}-07-01, {$this_year}-06-30)}</td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},1)}-07-01, {$this_year}-06-30,Book)}</td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},1)}-07-01, {$this_year}-06-30,Patent)}</td>
                                </tr>
                                <tr>
                                    <td><b>{subtract({$this_year},2)}/{subtract({$this_year},1)}</b></td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},2)}-07-01, {subtract({$this_year},1)}-06-30)}</td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},2)}-07-01, {subtract({$this_year},1)}-06-30, Book)}</td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},2)}-07-01, {subtract({$this_year},1)}-06-30, Patent)}</td>
                                </tr>
                                <tr>
                                    <td><b>{subtract({$this_year},3)}/{subtract({$this_year},2)}</b></td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},3)}-07-01, {subtract({$this_year},2)}-06-30)}</td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},3)}-07-01, {subtract({$this_year},2)}-06-30, Book)}</td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},3)}-07-01, {subtract({$this_year},2)}-06-30, Patent)}</td>
                                </tr>
                                <tr>
                                    <td><b>{subtract({$this_year},4)}/{subtract({$this_year},3)}</b></td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},4)}-07-01, {subtract({$this_year},3)}-06-30)}</td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},4)}-07-01, {subtract({$this_year},3)}-06-30,Book)}</td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},4)}-07-01, {subtract({$this_year},3)}-06-30,Patent)}</td>
                                </tr>
                                <tr>
                                    <td><b>{subtract({$this_year},5)}/{subtract({$this_year},4)}</b></td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},5)}-07-01, {subtract({$this_year},4)}-06-30)}</td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},5)}-07-01, {subtract({$this_year},4)}-06-30,Book)}</td>
                                    <td align='center'>{getUserPublicationCount({subtract({$this_year},5)}-07-01, {subtract({$this_year},4)}-06-30,Patent)}</td>
                                </tr>
                                <tr>
                                    <td><b>Lifetime</b></td>
                                    <td align='center'>{user_lifetime_pubs_count(Publication)}</td>
                                    <td align='center'>{user_lifetime_pubs_count(Book)}</td>
                                    <td align='center'>{user_lifetime_pubs_count(Patent)}</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table><br />
            ]]>
        </ReportItem>
        <ReportItem id="responsibilities" type="RadioReportItem" blobItem="FEC_INFO_RESP" blobType="BLOB_TEXT" options="Yes|No">
            <![CDATA[
                <h3>Responsibilities Variation</h3>
                Is there a formal Variance of Responsibilities Agreement in place as per Articles 7.02.2 and 13.1 of the Faculty Agreement?
                <div style='margin-left:25px;'>{$item}</div>
            ]]>
        </ReportItem>
        <ReportItem id="leaves" type="MultiTextReportItem" blobItem="FEC_INFO_LEAVES" blobType="BLOB_ARRAY" labels="Category|Start Date|End Date" types="Text|Date(yy/mm)|Date(yy/mm)" multiple="true" optional="true" class="wikitable">
            <![CDATA[
                <h3>Leaves</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="reasons" type="MultiTextReportItem" blobItem="FEC_INFO_REASONS" blobType="BLOB_ARRAY" labels="Reason|Reason(if other)|Comments" types="Select(Administrative Leave,Assisted Leave,Childbirth Leave,Compassionate Leave,Disability Leave,Leave without Pay,Medical Leave,Parental Leave,Political Leave,Sabbatical Leave,Associate Chair/Dean,Cross Appointment,Departmental Chair,Fellow/Scholar/Award,New Faculty,Research/Teaching Chair,Secondment,Other)|Text|Textarea" class="wikitable" multiple="true" optional="true">
            <![CDATA[
                <h3>Reasons For Reduced Teaching<small> (if applicable)</small></h3>
                {$item}
            ]]>
        </ReportItem>
        
