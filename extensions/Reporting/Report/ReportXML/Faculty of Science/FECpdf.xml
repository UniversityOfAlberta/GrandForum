                <h2>Publications</h2>
                <i>bold = graduate student; underline = undergraduate student</i>
                <ul>
            ]]>
        </ReportItem>
        <ReportItemSet id="products" type="PersonProductsReportItemSet" category="Publication|Patent/Spin-Off" includeHQP="false" start="CYCLE_START" end="CYCLE_END">
            <ReportItem id="row" type="StaticReportItem">
                <![CDATA[
                    <li style="page-break-inside: avoid;"><b>({$product_type})</b> {$product_citation}</li>
                ]]>
            </ReportItem>
        </ReportItemSet>
        <ReportItem id="productsfooter" type="StaticReportItem">
            <![CDATA[
                </ul>
            ]]>
        </ReportItem>
        
        <!-- Presentations -->
        <ReportItem id="presentationsbookmark" type="BookmarkReportItem" title="Presentations">
            <![CDATA[
                <h2>Presentations</h2>
                <table class='wikitable' frame='box' rules='all' width='100%'>
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Type</th>
                            <th>Invited</th>
                            <th>Organization</th>
                            <th>Location</th>
                            <th>Date</th>
                            <th>Length (minutes)</th>
                        </tr>
                    </thead>
            ]]>
        </ReportItem>
        <ReportItemSet id="presentations" type="PersonProductsReportItemSet" category="Presentation" includeHQP="false" start="CYCLE_START" end="CYCLE_END">
            <ReportItem id="row" type="StaticReportItem">
                <![CDATA[
                    <tr><td align='center'>{$presentation_title}</td>
                        <td align='center'>{$presentation_type}</td>
                        <td align='center'>{$presentation_invited}</td>
                        <td>{$presentation_organization}</td>
                        <td align='center'>{$presentation_country}</td>
                        <td align='center' style='white-space:nowrap;'>{$presentation_date}</td>
                        <td align='right' style='white-space:nowrap;'>{$presentation_length}</td>
                    </tr>
                ]]>
            </ReportItem>
        </ReportItemSet>
        <ReportItem id="presentationfooter" type="StaticReportItem">
