<?xml version="1.0" encoding="UTF-8" ?>
<Report name="Student Progress Report" reportType="RP_STUDENT" pdfFiles="StudentReportPDF" ajax="true">
    <Permissions>
        <Role role="HQP">
            <SectionPermission id="student" permissions="rw" />
            <SectionPermission id="supervisor" permissions="--" />
        </Role>
        <Role role="Faculty">
            <SectionPermission id="student" permissions="rw" />
            <SectionPermission id="supervisor" permissions="rw" />
        </Role>
    </Permissions>
    <ReportSection id="student" tooltip="Student Report" name="Student Report" title="{$user_name}: {$this_year} Student Report" blobSection="STUDENT" type="EditableReportSection">
        <Static>
            <![CDATA[
                <style >
                    td.label {
                        width: 175px;
                        font-weight: bold;
                        text-align: left;
                    }
                </style>
                <h2>Program Information</h2>
                <table>
                    <tr>
                        <td class='label'>Program:</td>
                        <td>{$user_level}</td>
                    </tr>
                    <tr>
                        <td class='label'>Program Start Date:</td>
                        <td>{$user_uni_start}</td>
                    </tr>
                    <tr>
                        <td class='label'>Research Area:</td>
                        <td>{$user_research_area}</td>
                    </tr>
            ]]>
        </Static>
        <ReportItem id="thesis" type="Text" blobItem="THESIS" width="500px">
            <![CDATA[
                <tr>
                    <td class='label'>Thesis Title:</td>
                    <td>{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <Static>
            <![CDATA[
                <tr>
                    <td class='label'>Supervisor(s):</td>
                    <td>{$user_supervisors}</td>
                </tr>
            ]]>
        </Static>
        <ReportItem id="courses" type="MultiText" blobItem="COURSES" blobType="BLOB_ARRAY" labels="Term|Course|Grade|Weight" types="Text|Text|Text|Text" sizes="100|120|75|75" multiple="true">
            <![CDATA[
                <tr>
                    <td class='label'>Courses Completed:</td>
                    <td>{$item}</td>
                </tr>
            ]]>
        </ReportItem>
        <Static>
            <![CDATA[
                </table>
                <h2>Achievements in the past year</h2>
            ]]>
        </Static>
        <ReportItem id="scholarships" type="MultiText" blobItem="SCHOLARSHIPS" blobType="BLOB_ARRAY" labels="$ (CAD)|Held (Start)|Held (End)|Description" types="Integer|Date|Date|Text" sizes="100|100|100|250" multiple="true">
            <![CDATA[
                <h3>Scholarships:</h3>
                {$item}
            ]]>
        </ReportItem>
        <Static>
            <![CDATA[
                <h3>Refereed Publications:</h3>
            ]]>
        </Static>
       <ReportItemSet id="products1" type="PersonProductsReportItemSet" category="Publication" useProductYear="true" includeHQP="false" peerReviewed="Yes" start="CYCLE_START" end="CYCLE_END">
            <Static>
                <![CDATA[
                    {$product_citation}<br />
                ]]>
            </Static>
        </ReportItemSet>
        <Static>
            <![CDATA[
                <h3>Non-Refereed Publications:</h3>
            ]]>
        </Static>
        <ReportItemSet id="products2" type="PersonProductsReportItemSet" category="Publication" useProductYear="true" includeHQP="false" peerReviewed="No" start="CYCLE_START" end="CYCLE_END">
            <Static>
                <![CDATA[
                    {$product_citation}<br />
                ]]>
            </Static>
        </ReportItemSet>
        <Static>
            <![CDATA[
                <h3>Presentations:</h3>
            ]]>
        </Static>
        <ReportItemSet id="products3" type="PersonProductsReportItemSet" category="Presentation" useProductYear="true" includeHQP="false" start="CYCLE_START" end="CYCLE_END">
            <Static>
                <![CDATA[
                    {$product_citation}<br />
                ]]>
            </Static>
        </ReportItemSet>
        <Static>
            <![CDATA[
                <h2>Student Comments</h2>
            ]]>
        </Static>
        <ReportItem id="activities" type="Textarea" blobItem="ACTIVITES">
            <![CDATA[
                <h3>Other Relevant Activities:</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="summary" type="Textarea" blobItem="SUMMARY">
            <![CDATA[
                <h3>Research Summary:</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="goals" type="Textarea" blobItem="GOALS">
            <![CDATA[
                <h3>Goals:</h3>
                {$item}
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="supervisor" tooltip="Supervisor Report" name="Supervisor Report" title="Supervisor Report" blobSection="SUPERVISOR" type="EditableReportSection">
        
    </ReportSection>
    <ReportSection id="review" tooltip="Review of on-line report content" name="Review" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <ReportItem id="review" type="SimpleReviewSubmitReportItem" />
        <ReportItem id="report_review" type="ReviewReportItem">
            <![CDATA[
                <h2>Preview</h2>
                <p>The following is just a preview of what the PDF will look like, the generated PDF may appear differently so make sure to look it over after generating it.</p>
                {$item}
            ]]>
        </ReportItem>
    </ReportSection>
</Report>
