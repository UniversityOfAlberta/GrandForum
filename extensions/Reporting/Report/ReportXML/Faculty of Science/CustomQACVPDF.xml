<?xml version="1.0" encoding="UTF-8" ?>
<Report name=" " headerName=" " reportType="RP_QA" pdfType="RPTP_CUSTOM_QA" ajax="true" year="{GET(year)}" startYear="{GET(startYear)}">
    <ReportSection id="information" tooltip="Information" name="Information" title="QA CV" blobSection="FEC_INFORMATION" type="HeaderReportSection" pagebreak="false">
        <ReportItem id="information" type="StaticReportItem">
            <![CDATA[
                <div style='position: absolute; top:-2.5em; border-style: solid; border-color: black; border-width: 0 0 1pt 0;'>
                    This abbreviated CV was generated by the UAlberta Faculty of Science Forum system, to meet the requirements of University of Albertaâ€™s Quality Assurance Graduate and Undergraduate Program Review. Information is reported for the {time2date({$startYear})} to {time2date({$endYear})} period only, and does not reflect the full academic record of the staff member.
                </div>
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <h1 style='padding:0; margin:0; font-size: 2em; font-weight: normal;'>{$user_name}</h1>
                <table style="width:100%;line-height:1em;" cellpadding='0'>
                    <tr>
                        <td style='width:50%;' valign='top'>
                            <table width="100%" cellpadding='0'>
                                <tr><td>{$user_level}</td></tr>
                                <tr><td>{$user_uni}</td></tr>
                                <tr><td>{$user_dept}</td></tr>
                            </table>
                        </td>
                        <td valign='top'>
                            <table width="100%" cellpadding='0'>
                                <tr><td align="right">Year of PhD:&nbsp;<b>{$user_phd_year}</b></td></tr>
                                <tr><td align="right">Year of Appointment:&nbsp;<b>{$user_appointment_year}</b></td></tr>
                            </table>
                        </td>
                    </tr>
                </table><br />
            ]]>
        </ReportItem>
        
        <!-- Employment/Education History -->
        <ReportItem id="educationbookmark" type="BookmarkReportItem" title="Education History">
            <![CDATA[
                <h2>Education History</h2>
            ]]>
        </ReportItem>
        <ReportItem id="education" type="PersonEducationReportItem">
            <![CDATA[
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="employmentbookmark" type="BookmarkReportItem" title="Employment History">
            <![CDATA[
                <h2>Employment History</h2>
            ]]>
        </ReportItem>
        <ReportItem id="employment" type="PersonEmploymentReportItem">
            <![CDATA[
                {$item}
            ]]>
        </ReportItem>
        
        <!-- Honors and Awards -->
        <If id="award_if" if="{>({getNProducts(1900-01-01, {$next_year}-12-31, Award, all,, false)}, 0)}">
            <ReportItem id="awardbookmark" type="BookmarkReportItem" title="Honors and Awards">
                <![CDATA[
                    <h2>Honors and Awards</h2>
                    <table class='wikitable' frame='box' rules='all' width='100%' style='page-break-inside: avoid;'>
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Award Category</th>
                                <th>Awarded By</th>
                                <th>Scope</th>
                                <th>Years</th>
                            </tr>
                        </thead>
                ]]>
            </ReportItem>
            <ReportItemSet id="awards" type="PersonProductsReportItemSet" category="Award" includeHQP="false" start="1900-01-01" end="{$next_year}-12-31">
                <ReportItem id="row" type="StaticReportItem">
                    <![CDATA[
                        <tr>
                            <td>{$product_title}</td>
                            <td align='left'>{$product_type}</td>
                            <td align='left'>{$award_by}</td>
                            <td align='left'>{$award_scope}</td>
                            <td align='center'>{$award_year_range}</td>
                        </tr>
                    ]]>
                </ReportItem>
            </ReportItemSet>
            <ReportItem id="awardfooter" type="StaticReportItem">
                <![CDATA[
                    </table><br />
                ]]>
            </ReportItem>
        </If>
        
        <!-- Courses Taught -->
        <If id="courses_if" if="{>({$user_courses_count},0)}">
            <ReportItem id="coursesbookmark" type="BookmarkReportItem" title="Courses Taught">
                <![CDATA[
                    <h2>Courses Taught</h2>
                ]]>
            </ReportItem>
            <ReportItem id="courses" type="PersonCoursesReportItem" start="{$start_year}" end="{$this_year}">
                <![CDATA[
                    {$item}<br />
                ]]>
            </ReportItem>
        </If>
        
        <!-- Supervision and Training Responsibilities -->
        <If id="supervision_if" if="{>({add({$user_grad_count},{$user_fellow_count},{$user_tech_count},{$user_ugrad_count})},0)}">
            <ReportItem id="studentsbookmark" type="BookmarkReportItem" title="Supervision and Training Responsibilities">
                <![CDATA[
                    <h2>Supervision and Training Responsibilities</h2>
                ]]>
            </ReportItem>
            <ReportItem id="students" type="PersonSupervisesReportItem" showOther="false">
                <![CDATA[
                    {$item}<br />
                ]]>
            </ReportItem>
        </If>
        
        <!-- Publications -->
        <If id="publications_if" if="{>({getNProducts({$start_year}, {$this_year}, Publication, all,, false, true)}, 0)}">
            <ReportItem id="publicationbookmark" type="BookmarkReportItem" title="Publications">
                <![CDATA[
                    <h2>Publications</h2>
                    <small>italic = <i>PDF</i>; bold = <b>graduate student</b>; underline = <u>undergraduate student</u></small>
                ]]>
            </ReportItem>
            <If id="publications_if1" if="{>({getNProducts({$start_year}, {$this_year}, Publication, Journal Paper|Journal Abstract|Collections Paper,, false)}, 0)}">
                <ReportItem id="journalbookmark" type="SubBookmarkReportItem" title="Journals">
                    <![CDATA[
                        <h3>Journals</h3>
                        <ul>
                    ]]>
                </ReportItem>
                <ReportItemSet id="products" type="PersonProductsReportItemSet" category="Publication" productType="Journal Paper|Journal Abstract|Collections Paper" peerReviewed="Yes" includeHQP="false" start="{$start_year}" end="{$this_year}">
                    <ReportItem id="row" type="AnnotateProductReportItem" blobSection="PRODUCTS" blobItem="PRODUCT_ANNOTATION" blobType="BLOB_RAW" blobSubItem="{$product_id}" optional="true">
                        <![CDATA[
                            <li style="page-break-inside: avoid;">{$item}</li>
                        ]]>
                    </ReportItem>
                </ReportItemSet>
                <ReportItem id="productsfooter" type="StaticReportItem">
                    <![CDATA[
                        </ul><br />
                    ]]>
                </ReportItem>
            </If>
            <If id="publications_if2" if="{>({getNProducts({$start_year}, {$this_year}, Publication, Conference Paper|Proceedings Paper|Workshop Paper,, false, true)}, 0)}">
                <ReportItem id="conferencebookmark" type="SubBookmarkReportItem" title="Conference Papers">
                    <![CDATA[
                        <h3>Conference Papers</h3>
                        <ul>
                    ]]>
                </ReportItem>
                <ReportItemSet id="conferences" type="PersonProductsReportItemSet" category="Publication" productType="Conference Paper|Proceedings Paper|Workshop Paper" peerReviewed="Yes" includeHQP="false" start="{$start_year}" end="{$this_year}">
                    <ReportItem id="row" type="AnnotateProductReportItem" blobSection="PRODUCTS" blobItem="PRODUCT_ANNOTATION" blobType="BLOB_RAW" blobSubItem="{$product_id}" optional="true">
                        <![CDATA[
                            <li style="page-break-inside: avoid;">{$item}</li>
                        ]]>
                    </ReportItem>
                </ReportItemSet>
                <ReportItem id="conferencefooter" type="StaticReportItem">
                    <![CDATA[
                        </ul><br />
                    ]]>
                </ReportItem>
            </If>
            <If id="publications_if3" if="{>({getNProducts({$start_year}, {$this_year}, Publication, Bachelors Thesis|Book|Book Chapter|Book Review|Edited Book|Magazine/Newspaper Article|Masters Thesis|Masters Dissertation|Misc|Other|PHD Thesis|PHD Dissertation|White Paper|Tech Report|Poster|Manual,, false, true)}, 0)}">
                <ReportItem id="otherbookmark" type="SubBookmarkReportItem" title="Other">
                    <![CDATA[
                        <h3>Other</h3>
                        <ul>
                    ]]>
                </ReportItem>
                <ReportItemSet id="others" type="PersonProductsReportItemSet" category="Publication" productType="Bachelors Thesis|Book|Book Chapter|Book Review|Edited Book|Magazine/Newspaper Article|Masters Thesis|Masters Dissertation|Misc|Other|PHD Thesis|PHD Dissertation|White Paper|Tech Report|Poster|Manual" peerReviewed="Yes" includeHQP="false" start="{$start_year}" end="{$this_year}">
                    <ReportItem id="row" type="AnnotateProductReportItem" blobSection="PRODUCTS" blobItem="PRODUCT_ANNOTATION" blobType="BLOB_RAW" blobSubItem="{$product_id}" optional="true">
                        <![CDATA[
                            <li style="page-break-inside: avoid;">{$item}</li>
                        ]]>
                    </ReportItem>
                </ReportItemSet>
                <ReportItem id="otherfooter" type="StaticReportItem">
                    <![CDATA[
                        </ul><br />
                    ]]>
                </ReportItem>
            </If>
        </If>

        <!-- Presentations -->
        <If id="presentations_if" if="{>({getNProducts({$start_year}, {$this_year}, Presentation, all,, false)}, 0)}">
            <ReportItem id="presentationbookmark" type="BookmarkReportItem" title="Presentations">
                <![CDATA[
                    <h2>Invited Presentations <i>(by staff member)</i></h2>
                    <ul>
                ]]>
            </ReportItem>
            <ReportItemSet id="presentations" type="PersonProductsReportItemSet" category="Presentation" status="Invited" includeHQP="false" start="{$start_year}" end="{$this_year}">
                <ReportItem id="row" type="StaticReportItem">
                    <![CDATA[
                        <li style="page-break-inside: avoid;">{$product_qa_citation}</li>
                    ]]>
                </ReportItem>
            </ReportItemSet>
            <ReportItem id="presentationfooter" type="StaticReportItem">
                <![CDATA[
                    </ul><br />
                ]]>
            </ReportItem>
        </If>
        
        <!-- Grants -->
        <If id="grants_if" if="{>({$user_cv_grant_count},0)}">
            <ReportItem id="grantsbookmark" type="BookmarkReportItem" title="Research Funding">
                <![CDATA[
                    <h2>Research Funding</h2>
                    <i>Total funding >= $10k awarded from external sources only and available during the reporting period</i>
                    <table class='wikitable' frame='box' rules='all' width='100%'>
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Sponsor</th>
                                <th>Starts</th>
                                <th>Ends</th>
                                <th>$Total</th>
                            </tr>
                        </thead>
                        <tbody>
                ]]>
            </ReportItem> 
            <ReportItemSet id="grants" type="PersonCVGrantsReportItemSet" start="{$start_year}" end="{$this_year}">
                <ReportItem id="row" type="StaticReportItem">
                    <![CDATA[
                        <tr>
                            <td align='left'>{$grant_project_id}<br />
                                <p>{$grant_description}</p>
                            </td>
                            <td align='left'>{$grant_sponsor}</td>
                            <td align='center' style='white-space:nowrap;'>{$grant_start_date}</td>
                            <td align='center' style='white-space:nowrap;'>{$grant_end_date}</td>
                            <td align='right'>${$grant_total}</td>
                        </tr>
                    ]]>
                </ReportItem>
            </ReportItemSet>
            <ReportItem id="grantsfooter" type="StaticReportItem">
                <![CDATA[
                    </tbody></table><br />
                ]]>
            </ReportItem>
        </If>

        <!-- Patents -->
        <If id="patents_if" if="{>({getNProducts(0000-00-00, 2100-06-30, Patent/Spin-Off, all,, false)}, 0)}">
            <ReportItem id="patentsbookmark" type="BookmarkReportItem" title="Patents">
                <![CDATA[
                    <h2>Patents/Spin-Offs</h2>
                    <ul>
                ]]>
            </ReportItem>
            <ReportItemSet id="patents" type="PersonProductsReportItemSet" category="Patent/Spin-Off" includeHQP="false" start="0000-00-00" end="2100-06-30">
                <ReportItem id="row" type="AnnotateProductReportItem" blobSection="PRODUCTS" blobItem="PRODUCT_ANNOTATION" blobType="BLOB_RAW" blobSubItem="{$product_id}" optional="true">
                    <![CDATA[
                        <li>{$item}</li>
                    ]]>
                </ReportItem>
            </ReportItemSet>
            <ReportItem id="patentsfooter" type="StaticReportItem">
                <![CDATA[
                    </ul><br />
                ]]>
            </ReportItem>
        </If>
        
        <!-- Service to the University and the Profession -->
        <If id="committees_if" if="{>({getNProducts({$start_year}, {$this_year}, Activity, Departmental|Faculty|University|Scientific|Community Outreach|Other,, false)}, 0)}">
            <ReportItem id="servicesbookmark" type="BookmarkReportItem" title="Service to the University and the Profession">
                <![CDATA[
                    <h2>Service to the University and the Profession</h2>
                ]]>
            </ReportItem>
            
            <!-- Departmental -->
            <If id="departmental_if" if="{>({getNProducts({$start_year}, {$this_year}, Activity, Departmental,, false)}, 0)}">
                <ReportItem id="departmentalbookmark" type="SubBookmarkReportItem" title="Departmental">
                    <![CDATA[
                        <h3><i>{time2date({$startYear})} to {time2date({$endYear})}:</i> Departmental</h3>
                    ]]>
                </ReportItem>
                <ReportItemSet id="departmental_committee" type="PersonProductsReportItemSet" category="Activity" productType="Departmental" includeHQP="false" start="{$start_year}" end="{$this_year}-06-30">
                    <ReportItem id="committee" type="Static">
                        <![CDATA[
                            <p style='margin-left:2em;'>{$product_title}, {$product_year_range}</p>
                        ]]>
                    </ReportItem>
                </ReportItemSet>
            </If>
            
            <!-- Faculty -->
            <If id="faculty_if" if="{>({getNProducts({$start_year}, {$this_year}, Activity, Faculty,, false)}, 0)}">
                <ReportItem id="facultybookmark" type="SubBookmarkReportItem" title="Faculty">
                    <![CDATA[
                        <h3><i>{time2date({$startYear})} to {time2date({$endYear})}:</i> Faculty</h3>
                    ]]>
                </ReportItem>
                <ReportItemSet id="faculty_committee" type="PersonProductsReportItemSet" category="Activity" productType="Faculty"  includeHQP="false" start="{$start_year}" end="{$this_year}">
                    <ReportItem id="committee" type="Static">
                        <![CDATA[
                            <p style='margin-left:2em;'>{$product_title}, {$product_year_range}</p>
                        ]]>
                    </ReportItem>
                </ReportItemSet>
            </If>
            
            <!-- University -->
            <If id="university_if" if="{>({getNProducts({$start_year}, {$this_year}, Activity, University,, false)}, 0)}">
                <ReportItem id="universitybookmark" type="SubBookmarkReportItem" title="University">
                    <![CDATA[
                        <h3><i>{time2date({$startYear})} to {time2date({$endYear})}:</i> University</h3>
                    ]]>
                </ReportItem>
                <ReportItemSet id="university_committee" type="PersonProductsReportItemSet" category="Activity" productType="University"  includeHQP="false" start="{$start_year}" end="{$this_year}">
                    <ReportItem id="committee" type="Static">
                        <![CDATA[
                            <p style='margin-left:2em;'>{$product_title}, {$product_year_range}</p>
                        ]]>
                    </ReportItem>
                </ReportItemSet>
            </If>
            
            <!-- Scientific -->
            <If id="scientific_if" if="{>({getNProducts({$start_year}, {$this_year}, Activity, Scientific,, false)}, 0)}">
                <ReportItem id="scientificbookmark" type="SubBookmarkReportItem" title="Scientific">
                    <![CDATA[
                        <h3><i>{time2date({$startYear})} to {time2date({$endYear})}:</i> Scientific</h3>
                    ]]>
                </ReportItem>
                <ReportItemSet id="scientific_committee" type="PersonProductsReportItemSet" category="Activity" productType="Scientific" includeHQP="false" start="{$start_year}" end="{$this_year}">
                    <ReportItem id="committee" type="Static">
                        <![CDATA[
                            <p style='margin-left:2em;'>{$product_title} - {getProductData(organization)} (<b>{$product_scope}</b>), {$product_year_range}</p>
                        ]]>
                    </ReportItem>
                </ReportItemSet>
            </If>
            
            <!-- Outreach and Community Engagement -->
            <If id="community_if" if="{>({getNProducts({$start_year}, {$this_year}, Activity, Community Outreach,, false)}, 0)}">
                <ReportItem id="outreachbookmark" type="SubBookmarkReportItem" title="Outreach and Community Engagement">
                    <![CDATA[
                        <h3><i>{time2date({$startYear})} to {time2date({$endYear})}:</i> Outreach and Community Engagement</h3>
                    ]]>
                </ReportItem>
                <ReportItemSet id="community_committee" type="PersonProductsReportItemSet" category="Activity" productType="Community Outreach" includeHQP="false" start="{$start_year}" end="{$this_year}">
                    <ReportItem id="committee" type="Static">
                        <![CDATA[
                            <p style='margin-left:2em;'>{$product_title}, {$product_year_range}</p>
                        ]]>
                    </ReportItem>
                </ReportItemSet>
            </If>
            
            <!-- Other -->
            <If id="other_if" if="{>({getNProducts({$start_year}, {$this_year}, Activity, Other,, false)}, 0)}">
                <ReportItem id="otherbookmark" type="SubBookmarkReportItem" title="Other">
                    <![CDATA[
                    	<h3><i>{time2date({$startYear})} to {time2date({$endYear})}:</i> Other</h3>
                    ]]>
                </ReportItem>
                <ReportItemSet id="other_committee" type="PersonProductsReportItemSet" category="Activity" productType="Other" includeHQP="false" start="{$start_year}" end="{$this_year}">
                    <ReportItem id="committee" type="Static">
                        <![CDATA[
                            <p style='margin-left:2em;'>{$product_title}, {$product_year_range}</p>
                        ]]>
                    </ReportItem>
                </ReportItemSet>
            </If>
        </If>
        
        <!-- Footer -->
        <ReportItem id="cv_footer" type="Static">
            <![CDATA[
                <br /><br /><br />
                <div style="page-break-inside:avoid; position: absolute; bottom:0;">
                    <i>Generated: {$timestamp}</i>
                </div>
            ]]>
         </ReportItem>
    </ReportSection>
</Report>
