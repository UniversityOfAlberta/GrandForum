<?xml version="1.0" encoding="UTF-8" ?>
<Report name="FECReview" reportType="RP_FEC" pdfFiles="FECReview" ajax="true">
    <Permissions>
        <Role role="ISAC">
            <SectionPermission id="reviews" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Role role="RMC">
            <SectionPermission id="reviews" permissions="rw" />
            <SectionPermission id="review" permissions="" />
            <SectionPermission id="submit" permissions="" />
        </Role>
    </Permissions>
    <ReportSection id="reviews" tooltip="Reviews" name="Reviews" title="Reviews" blobSection="FEC_REVIEW" type="EditableReportSection" pagebreak="false">
	<ReportItem id="js" type="StaticReportItem">
	    <![CDATA[
	    	<div align=right><input type='text' id='fec_search' placeholder='Search...' autocomplete='off' /></div>
	    	<script type='text/javascript'>
	    	     var fec_search = function(){
	    	     	var search = unaccentChars($("#fec_search").val())
	    		$(".toggleHeader").each(function(i,el){
	    		     if(unaccentChars($('h3', $(el)).text()).indexOf(search) != -1 || search == ""){
	    		         $(el).show()
	    		     }
	    		     else{
	    		     	$(el).hide()
	    		     }
	    		});				
	    	     }

	             $("#fec_search").keyup(fec_search).change(fec_search).click(fec_search)
   		</script>
	    ]]>
	</ReportItem>
	<ReportItemSet id="if_statement" type="IfReportItemSet" if="{and({==({GET(dept)}, {$user_dept})},
								         {contains({$user_full_roles}, Chair)})}">
	<ReportItemSet id="professors" type="AllPeopleReportItemSet" roles="Faculty" sort_reversed="false" department="{GET(dept)}">
	    <ReportItemSet id="not_first" type="NotFirstReportItemSet">
		    <ReportItem id="pagebreak" type="PageBreakReportItem">
		        <![CDATA[
		            {$item}
		        ]]>
		    </ReportItem>
		  </ReportItemSet>
	    <ReportItemSet id="header" type="ToggleHeaderReportItemSet" title="{$user_reversed_name}">
	        <ReportItem id="bookmark" type="BookmarkReportItem" title="{$user_name}">
	            <![CDATA[
	                {$item}
	            ]]>
	        </ReportItem>
	    	 <ReportItem id="download" type="PDFReportItem" reportType="FEC" buttonName="Download PDF">
	    	     <![CDATA[
	    	     <div style="margin-left:15px; margin-top:15px;">{$item}</div><br />
	    	     ]]>
	    	 </ReportItem>
	         <ReportItem id="teachingEvaluations" type="TextareaReportItem" blobItem="FEC_REVIEW_TEACHING_EVALUATION" blobSubItem="{$user_id}" blobType="BLOB_TEXT" optional="true">
                    <![CDATA[
			<b style='font-size:1.25em;'>Teaching Evaluations</b>
			<div>{$item}</div>
                    ]]>
                  </ReportItem>
                  <ReportItem id="researchEvaluations" type="TextareaReportItem" blobItem="FEC_REVIEW_RESEARCH_EVALUATION" blobType="BLOB_TEXT" blobSubItem="{$user_id}" optional="true">
                      <![CDATA[
		          <b style='font-size:1.25em;'>Research Evaluations</b>
		          <div>{$item}</div>
		      ]]>
		  </ReportItem>
	        <ReportItem id="departmentalFec" type="TextareaReportItem" blobItem="FEC_REVIEW_DEPARTMENTAL_EVA" blobType="BLOB_TEXT" blobSubItem="{$user_id}" optional="true">

			<![CDATA[
		            <b style='font-size:1.25em;'>Departmental</b>
		            <div>{$item}</div>
		      	]]>
		  </ReportItem>
		  <ReportItem id="facultycommittee" type="TextareaReportItem" height="100px" blobItem="FEC_REVIEW_COMMITTEE" blobType="BLOB_TEXT" blobSubItem="{$user_id}" optional="true">
		      <![CDATA[
		          <b style='font-size:1.25em;'>Faculty</b>
		          <div>{$item}</div>
		      ]]>
		  </ReportItem>
		  <ReportItem id="universitycommittee" type="TextareaReportItem" height="100px" blobItem="FEC_REVIEW_UNIVERSITY" blobType="BLOB_TEXT" blobSubItem="{$user_id}" optional="true">
		      <![CDATA[
		          <b style='font-size:1.25em;'>University</b>
		          <div>{$item}</div>
		      ]]>
		  </ReportItem>
		  <ReportItem id="scientificcommittee" type="TextareaReportItem" height="100px" blobItem="FEC_REVIEW_SCIENTIFIC" blobType="BLOB_TEXT" blobSubItem="{$user_id}" optional="true">
		      <![CDATA[
		          <b style='font-size:1.25em;'>Scientific</b>
		          <div>{$item}</div>
		      ]]>
		  </ReportItem>
		  <ReportItem id="communityOutreachcommittee" type="TextareaReportItem" height="100px" blobItem="FEC_REVIEW_COMMUNITY" blobType="BLOB_TEXT" blobSubItem="{$user_id}" optional="true">
		      <![CDATA[
		          <b style='font-size:1.25em;'>Community Outreach</b>
		          <div>{$item}</div>
		      ]]>
		  </ReportItem>
		  <ReportItem id="Othercommittee" type="TextareaReportItem" height="100px" blobItem="FEC_REVIEW_OTHER" blobType="BLOB_TEXT" blobSubItem="{$user_id}" optional="true">
		      <![CDATA[
		          <b style='font-size:1.25em;'>Other</b>
		          <div>{$item}</div>
		      ]]>
		  </ReportItem>
		  <ReportItem id="comments" type="TextareaReportItem" blobItem="FEC_REVIEW_COMMENTS" blobType="BLOB_TEXT" blobSubItem="{$user_id}" optional="true">
		      <![CDATA[
		          <b style='font-size:1.25em;'>General Comments</b>
		          <div>{$item}</div>
		      ]]>
		  </ReportItem>
		  <ReportItem id="recommendationsIncrement" type="TextareaReportItem" blobItem="FEC_REVIEW_RECOMMENDATIONS_INCREMENT" width="100px" height="30px" blobType="BLOB_TEXT" blobSubItem="{$user_id}" optional="true">
		      <![CDATA[
		          <b style='font-size:1.25em;'>Recommendations</b>
		          <table><thead><th>Increment</th><th>Tenure</th><th>Promotion</th></thead><tbody><tr>
		               <td>{$item}</td>
		      ]]>
		  </ReportItem>
		  <ReportItem id="recommendationsTenure" type="TextareaReportItem" blobItem="FEC_REVIEW_RECOMMENDATIONS_TENURE" width="100px" height="30px" blobType="BLOB_TEXT" blobSubItem="{$user_id}" optional="true">
		      <![CDATA[
		      	  <td>{$item}</td>
		      ]]>
		  </ReportItem>
		  <ReportItem id="recommendationsPromotion" type="TextareaReportItem" blobItem="FEC_REVIEW_RECOMMENDATIONS_PROMOTION" width="100px" height="30px" blobType="BLOB_TEXT" blobSubItem="{$user_id}" optional="true">
		      <![CDATA[
		          <td>{$item}</td></tr></tbody></table>
		      ]]>
		  </ReportItem>
	    </ReportItemSet>
	</ReportItemSet>
	</ReportItemSet>
        <ReportItemSet id="if_statement" type="IfReportItemSet" if="{or({!=({GET(dept)}, {$user_dept})},
        								{!contains({$user_full_roles},Chair)})}">
                <ReportItemSet id="professors" type="AllPeopleReportItemSet" roles="Faculty" sort_reversed="true" department="{GET(dept)}">
                    <ReportItemSet id="header" type="ToggleHeaderReportItemSet" title="{$user_reversed_name}">
                        <ReportItem id="download" type="PDFReportItem" reportType="FEC" buttonName="Download PDF">
                            <![CDATA[
                                 <div style="margin-left:15px; margin-top:15px;">{$item}</div>
                            ]]>
                        </ReportItem>
                        <ReportItem id="feedback_unedit" type="StaticReportItem">
                            <![CDATA[
                            	<h1>Teaching Evaluations</h1>
                            	<div>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_TEACHING_EVALUATION,{$user_id},{$chair_id},0)}</div>
                            	<h1>Research Evaluations</h1>
                            	<div>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_RESEARCH_EVALUATION,{$user_id},{$chair_id},0)}</div>
                            	<h1>Service/Committees Evaluations</h1>
                            	<b>Departmental</b>
                            	<div>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_DEPARTMENTAL,{$user_id},{$chair_id},0)}</div>
                            	<b>Faculty</b>
                                <div>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_FACULTY,{$user_id},{$chair_id},0)}</div>
                                <b>University</b>
                                <div>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_UNIVERSITY,{$user_id},{$chair_id},0)}</div>
                                <b>Scientific</b>
                                <div>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_SCIENTIFIC,{$user_id},{$chair_id},0)}</div>
                                <b>Community Outreach</b>
                                <div>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_COMMUNITY,{$user_id},{$chair_id},0)}</div>
                                <b>Other</b>
                                <div>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_OTHER,{$user_id},{$chair_id},0)}</div>
				<h1>Comments</h1>
				<div>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_COMMENTS,{$user_id},{$chair_id},0)}</div>
                            ]]>
                        </ReportItem>
                    </ReportItemSet>
                </ReportItemSet>
        </ReportItemSet>
    </ReportSection>
    <ReportSection id="review" tooltip="Review of on-line report content" name="Review" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <ReportItem id="report_review" type="ReviewReportItem">
            <![CDATA[{$item}]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="submit" tooltip="PDF generation and submission to the RMC" name="Submit" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <Instructions>
            <![CDATA[

            ]]>
        </Instructions>
        <ReportItem id="review" type="ReviewSubmitReportItem" />
    </ReportSection>
</Report>
