<?xml version="1.0" encoding="UTF-8" ?>
<Report name="FEC" reportType="RP_FEC" pdfFiles="FECpdf" ajax="true" startYear="-5">
    <Permissions>
        <Role start="REPORTING_CYCLE_START" end="REPORTING_CYCLE_END" role="NI">
            <SectionPermission id="information" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
        <Role start="REPORTING_CYCLE_START" end="REPORTING_CYCLE_END" role="RMC">
            <SectionPermission id="information" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
    </Permissions>
    <ReportSection id="information" tooltip="Intro" name="Intro" title="Intro" blobSection="FEC_INFORMATION" type="EditableReportSection">
        <ReportItem id="information" type="StaticReportItem">
            <![CDATA[
                <table class='wikitable'>
                    <tr><td><b>Name:</b></td><td>{$user_name}</td></tr>
                    <tr><td><b>Rank:</b></td><td>{$user_level}</td></tr>
                    <tr><td><b>Department</b></td><td>{$user_dept}</td></tr>
                    <tr><td><b>Year of PhD:</b></td><td>{$user_phd_year}</td></tr>
                    <tr><td><b>Year of Appointment:&nbsp;</b></td><td>{$user_appointment_year}</td></tr>
                    <tr><td><b>Graduate Students (Supervised or Co-supervised):</b></td><td>{$user_grad_count}</td></tr>
                    <tr><td style='width:350px;'><b>Post-doctoral Fellows and Research Associates (Supervised or Co-supervised):</b></td><td>{$user_fellow_count}</tr></td>
                    <tr><td style='width:350px;'><b>Technicians:</b></td><td>{$user_tech_count}</tr></td>
                    <tr><td style='width:350px;'><b>Undergraduates (Supervised or Co-supervised):</b></td><td>{$user_ugrad_count}</tr></td>
                </table>
            ]]>
        </ReportItem>
        <ReportItem id="responsibilities" type="RadioReportItem" blobItem="FEC_INFO_RESP" blobType="BLOB_TEXT" options="Yes|No">
            <![CDATA[
                <h2>Responsibilities Variation</h2>
                Is there a formal Variance of Responsibilities Agreement in place as per Articles 7.02.2 and 13.1 of the Faculty Agreement?
                <div style='margin-left:25px;'>{$item}</div>
            ]]>
        </ReportItem>
        <ReportItem id="leaves" type="MultiTextReportItem" blobItem="FEC_INFO_LEAVES" blobType="BLOB_ARRAY" labels="Category|Start Date|End Date" types="Text|Date|Date" multiple="true" optional="true">
            <![CDATA[
                <h2>Leaves</h2>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="reasons" type="TextareaReportItem" blobItem="FEC_INFO_REASONS" blobType="BLOB_TEXT" rich="true" optional="true">
            <![CDATA[
                <h2>Reasons For Reduced Teaching<small> (if applicable)</small></h2>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="development" type="TextareaReportItem" blobItem="FEC_INFO_DEVELOPMENT" blobType="BLOB_TEXT" rich="true" optional="true">
            <![CDATA[
                <h2>Teaching Development And Innovation</h2>
                  {$item}
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="courses" tooltip="Teaching" name="Teaching" title="Teaching" blobSection="FEC_COURSES" type="EditableReportSection">
        <ReportItem id="coursesheader" type="StaticReportItem">
            <![CDATA[
                <h2>Courses</h2>
                <table class='wikitable' style='width:100%;'><thead><tr>
                <th>Subject</th>
                <th>Term</th>
                <th>Comp.</th>
                <th>Section</th>
                <th>Enroll.</th>
                <!--th>%</th--></tr></thead><tbody>
            ]]>
        </ReportItem>
        <ReportItemSet id="courses" type="PersonCoursesReportItemSet" start="{$start_year}-07-01" end="{$this_year}-06-30">
            <ReportItem id="row" type="StaticReportItem">
                <![CDATA[
                 <tr><td align='center'>{$course_subject} {$course_number}</td>
                     <td>{$course_term}</td>
                     <td align='center'>{$course_comp}</td>
                     <td align='center'>{$course_section}</td>
                     <td align='center'>{$course_enroll}</td>
                     <!--td align='center'>{$course_enroll_percent}</td--></tr>
                ]]>
            </ReportItem>
        </ReportItemSet>
        <ReportItem id="coursesfooter" type="StaticReportItem">
            <![CDATA[
                </tbody></table>
            ]]>
        </ReportItem>
        <ReportItem id="otherTeaching" type="TextareaReportItem" blobItem="FEC_INFO_TEACHING" blobType="BLOB_TEXT" rich="true" optional="true">
            <![CDATA[
                <h2>Other Teaching</h2>{$item}
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="students" tooltip="HQP Supervision" name="HQP Supervision" title="HQP Supervision" blobSection="FEC_STUDENTS" type="EditableReportSection">
        <ReportItem id="studentsheader" type="StaticReportItem">
            <![CDATA[
                <table class='wikitable' style='width:100%'><thead><tr>
                    <th>Name</th>
                    <th>Resp</th>
                    <th>Awards</th>
                    <th>Role</th>
                    <th>Research Area</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th></tr></thead><tbody>
            ]]>
        </ReportItem>
        <ReportItemSet id="students" type="PersonSupervisesRelationReportItemSet" start="{$start_year}-07-01" end="{$this_year}-06-30">
            <ReportItem id="row" type="StaticReportItem">
                <![CDATA[
                    <tr><td>{$hqp_reversed_name}</td>
                    <td>{$hqp_position}</td>
                    <td>{$hqp_awards}</td>
                    <td>{$user_hqp_role}</td>
                    <td>{$hqp_research_area}</td>
                    <td>{$hqp_start_date}</td>
                    <td>{$hqp_end_date}</td>
                    <td>{$hqp_status}</td></tr>
                ]]>
            </ReportItem>
        </ReportItemSet>
        <ReportItem id="studentsfooter" type="StaticReportItem">
            <![CDATA[
                </tbody></table>
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="publications" tooltip="Outputs" name="Outputs" title="Outputs"  blobSection="FEC_PRODUCTS" type="EditableReportSection">
        <ReportItem id="productsheader" type="StaticReportItem">
            <![CDATA[
                <h2>Publications</h2>
                <table class='wikitable' style='width:100%'><tbody>
            ]]>
        </ReportItem>
        <ReportItemSet id="products" type="PersonProductsReportItemSet" category="Publication" start="{$start_year}-07-01" end="{$this_year}-06-30">
        <ReportItem id="row" type="StaticReportItem">
            <![CDATA[
                <tr><td>{$product_citation}</td></tr>
            ]]>
        </ReportItem>
        </ReportItemSet>
        <ReportItem id="productsfooter" type="StaticReportItem">
            <![CDATA[
                </tbody></table>
            ]]>
        </ReportItem>
        <ReportItem id="presentationheader" type="StaticReportItem">
            <![CDATA[
                <h2>Presentations</h2>
                <table class ='wikitable' style='width:100%'>
                    <thead>
                    <tr>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Invited</th>
                        <th>Organization</th>
                        <th>Location</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
            ]]>
        </ReportItem>
        <ReportItemSet id="presentations" type="PersonProductsReportItemSet" category="Presentation" start="{$start_year}-07-01" end="{$this_year}-06-30">
            <ReportItem id="row" type="StaticReportItem">
                <![CDATA[
                    <tr><td align='center'>{$presentation_title}</td>
                        <td align='center'>{$presentation_type}</td>
                        <td align='center'>{$presentation_invited}</td>
                        <td>{$presentation_organization}</td>
                        <td align='center'>{$presentation_country}</td>
                        <td style='white-space:nowrap;'>{$presentation_date}</td>
                    </tr>
                ]]>
            </ReportItem>
        </ReportItemSet>
        <ReportItem id="presentationfooter" type="StaticReportItem">
            <![CDATA[
                </tbody></table>
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="grants" tooltip="Funding and Awards" name="Funding and Awards" title="Funding and Awards" blobSection="FEC_GRANTS" type="EditableReportSection">
        <ReportItem id ="grantsheader" type="StaticReportItem">
            <![CDATA[
                <table class='wikitable' style='width:100%'>
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Sponsor</th>
                            <th>Starts</th>
                            <th>Ends</th>
                            <th>$Total</th>
                        </tr>
                    </thead>
                    <tbody>
            ]]>
        </ReportItem> 
        <ReportItemSet id="grants" type="PersonGrantsReportItemSet" start="{$start_year}-07-01" end="{$this_year}-06-30">
            <ReportItem id="row" type="StaticReportItem">
                <![CDATA[
                    <tr>
                        <td>{$grant_title}</td>
                        <td>{$grant_sponsor}</td>
                        <td align="center">{$grant_start_date}</td>
                        <td align="center">{$grant_end_date}</td>
                        <td align="right">${$grant_total}</td>
                    </tr>
                ]]>
            </ReportItem>
        </ReportItemSet>
        <ReportItem id="grantsfooter" type="StaticReportItem">
            <![CDATA[
                </tbody></table>
            ]]>
        </ReportItem>
        <ReportItem id="awardheader" type="StaticReportItem">
            <![CDATA[
                <h2>Awards Received</h2>
                <table class='wikitable' frame='box' rules='all' width='100%'>
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Award Category</th>
                            <th>Scope</th>
                            <th>Year</th>
                        </tr>
                    </thead>
            ]]>
        </ReportItem>
        <ReportItemSet id="awards" type="PersonProductsReportItemSet" category="Award" start="{$start_year}-07-01" end="{$this_year}-06-30">
            <ReportItem id="row" type="StaticReportItem">
                <![CDATA[
                    <tr><td>{$product_title}</td>
                        <td align='center'>{$award_category}</td>
                        <td align='center'>{$award_scope}</td>
                        <td align='center'>{$product_year}</td>
                    </tr>
                ]]>
            </ReportItem>
        </ReportItemSet>
        <ReportItem id="awardfooter" type="StaticReportItem">
            <![CDATA[
                </table>
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="additionalInfo" tooltip="Additional Info" name="Additional Info" title="Additional Info" blobSection="FEC_ADDITIONAL_INFO" type="EditableReportSection">
        <ReportItem id="profActivities" type="TextareaReportItem" blobItem="FEC_INFO_ACTIVITIES" blobType="BLOB_TEXT" rich="true" optional="true">
            <![CDATA[
                <h2>Supplementary Professional Activities</h2>{$item}
            ]]>
        </ReportItem>
        <ReportItem id="serviceOutreachDepartmental" type="TextareaReportItem" blobItem="FEC_INFO_DEPARTMENTAL" blobType="BLOB_TEXT" rich="true" optional="true">
            <![CDATA[
                <h2>Service/Committees/Outreach</h2><b>Departmental</b>{$item}
            ]]>
        </ReportItem>
        <ReportItem id="serviceOutreachFaculty" type="TextareaReportItem" blobItem="FEC_INFO_FACULTY" blobType="BLOB_TEXT" rich="true" optional="true">
            <![CDATA[
                <b>Faculty</b>{$item}
            ]]>
        </ReportItem>
        <ReportItem id="serviceOutreachUniversity" type="TextareaReportItem" blobItem="FEC_INFO_UNIVERSITY" blobType="BLOB_TEXT" rich="true" optional="true">
            <![CDATA[
                <b>University</b>{$item}
            ]]>
        </ReportItem>
        <ReportItem id="serviceOutreachScientific" type="MultiTextReportItem" blobItem="FEC_INFO_SCIENTIFIC" blobType="BLOB_ARRAY" labels="Scope|Organization|Description" types="Text|Text|Text" multiple="true" optional="true">
            <![CDATA[
                <b>Scientific</b>{$item}
            ]]>
        </ReportItem>
        <ReportItem id="serviceOutReachCommunity" type="TextareaReportItem" blobItem="FEC_INFO_COMMUNITY" blobtype="BLOB_TEXT" rich="true" optional="true">
            <![CDATA[<b>Outreach/Community Engagement/Media</b>{$item}
            ]]>
        </ReportItem>
        <ReportItem id="serviceOutreachOther" type="TextareaReportItem" blobItem="FEC_INFO_OTHER" blobType="BLOB_TEXT" rich="true" optional="true">
            <![CDATA[
                <b>Other</b>{$item}
            ]]>
        </ReportItem>
        <ReportItem id="additionalData" type="TextareaReportItem" blobItem="FEC_INFO_ADDITIONAL" blobType="BLOB_TEXT" rich="true" optional="true">
            <![CDATA[
                <h2>Additional Data</h2>{$item}
            ]]>
        </ReportItem>
        <ReportItem id="footnotes" type="TextareaReportItem" blobItem="FEC_INFO_FOOTNOTES" blobType="BLOB_TEXT" rich="true" optional="true">
            <![CDATA[
                <h2>Footnotes</h2>{$item}
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="chair" tooltip="Chair Recommendation" name="Chair Recommendation" blobSection="CHAIR_REVIEW" type="EditableReportSection">
        <ReportItem id="chairTable" type="StaticReportItem">
            <![CDATA[
                <p id='comment_p'></p>
                <div id='chair_comments_none' style=visibility:hidden;">
                    No Chair Recommendation Available.
                </div>
                <div id='chair_comments' style="visibility:hidden;">
                    <table class='dashboard wikitable'>
                    <tbody>
                    <tr><td>Teaching Evaluations</td><td>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_TEACHING_EVALUATION,{$user_id},{$chair_id},0)}</td></tr>
                    <tr><td>Research Evaluations</td><td>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_RESEARCH_EVALUATION,{$user_id},{$chair_id},0)}</td></tr>
                    <tr><td>Departmental</td><td>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_DEPARTMENTAL,{$user_id},{$chair_id},0)}</td></tr>
                    <tr><td>Faculty</td><td>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_FACULTY,{$user_id},{$chair_id},0)}</td></tr>
                    <tr><td>University</td><td>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_UNIVERSITY,{$user_id},{$chair_id},0)}</td></tr>
                    <tr><td>Scientific</td><td>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_SCIENTIFIC,{$user_id},{$chair_id},0)}</td></tr>
                    <tr><td>Community Outreach</td><td>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_COMMUNITY,{$user_id},{$chair_id},0)}</td></tr>
                    <tr><td>Other</td><td>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_OTHER,{$user_id},{$chair_id},0)}</td></tr>
                    <tr><td>Comments</td><td><p id='fec_comments'>{getText(RP_FEC,FEC_REVIEW,FEC_REVIEW_COMMENTS,{$user_id},{$chair_id},0)}</p></td></tr>
                    </tbody>
                    </table>
                </div>
                <script type='text/javascript'>
                var intervalId = setInterval(function(){
                    if ($('#comment_p').is(':visible') && !$('#fec_comments').is(':empty')){
                        document.getElementById('chair_comments').style.visibility = 'visible';
                        clearInterval(intervalId);
                        intervalId = null;
                    }
                    else if($('#comment_p').is(':visible') && $('#fec_comments').is(':empty')){
                        document.getElementById('chair_comments_none').style.visibility = 'visible';
                        clearInterval(intervalId);
                        intervalId = null;
                    }
                }, 100);
                </script>
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="review" tooltip="Review of on-line report content" name="Review" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <ReportItem id="report_review" type="ReviewReportItem">
            <![CDATA[{$item}]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="submit" tooltip="PDF generation and submission to the RMC" name="Submit" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <Instructions>
            <![CDATA[

            ]]>
        </Instructions>
        <ReportItem id="review" type="ReviewSubmitReportItem" />
    </ReportSection>
</Report>
