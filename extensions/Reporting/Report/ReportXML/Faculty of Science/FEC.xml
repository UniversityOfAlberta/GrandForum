                <script type="text/javascript">
                    $('#reportFooter').prev().hide();
                    $('#reportFooter').hide();
                    setInterval(function(){
                        if(!$('#download_button_FECpdf').is(':disabled') && !$('#generateButton').is(':disabled')){
                            $('#lock').prop('disabled', false);
                        }
                        else{
                            $('#lock').prop('disabled', true);
                        }
                    }, 100);
                    $('#lock').click(function(){
                        if(confirm('Are you sure you want to proceed?\n\nThis annual report will be locked. You will not be able to make further changes.')){
                            $('#lockContainer input[type=checkbox]').prop('checked', true);
                            findAutosaves();
                            saveAll(function(){location.reload();});
                        } else {
                            $('#lockContainer input[type=checkbox]').prop('checked', false);
                        }
                        return false;
                    });
                </script>
            ]]>
