                <h3>Budget Justification</h3>
                <h4>1) Salaries to students</h4>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="just2" type="TextareaReportItem" blobType="BLOB_TEXT" blobItem="JUST2" height="100px">
            <![CDATA[
                <h4>2) Salaries to non-students</h4>
                {$item}
            ]]>
