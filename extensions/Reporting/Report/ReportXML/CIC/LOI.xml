<?xml version="1.0" encoding="UTF-8" ?>
<Report name="Construction Innovation Centre (CIC) LETTER OF INTENT (LOI) for Proposed Research Project" reportType="RP_LOI" pdfType="RP_LOI" pdfFiles="LOIPDF" year="0" allowIdProjects="true" ajax="true">
    <Permissions>
        <Role role="INACTIVE+">
            <SectionPermission id="intent" permissions="rw" />
            <SectionPermission id="review" permissions="rw" />
            <SectionPermission id="submit" permissions="rw" />
        </Role>
    </Permissions>
    <ReportSection id="intent" type="EditableReportSection" blobSection="INTENT" name="Letter of Intent" title="Construction Innovation Centre (CIC) LETTER OF INTENT (LOI) for Proposed Research Project">
        <If if="{!=({getText(RP_LOI, INTENT, PROJ_STATUS, 0, {$user_id}, {$project_id})}, )}">
            <![CDATA[
                {set(status, {getText(RP_LOI, INTENT, PROJ_STATUS, 0, {$user_id}, {$project_id})})}
            ]]>
        </If>
        <ElseIf if="{!=({getText(RP_LOI, INTENT, NSERC_APPROVED, 0, {$user_id}, {$project_id})}, )}">
            <![CDATA[
                {set(status, NSERC Approved)}
            ]]>
        </ElseIf>
        <ElseIf if="{!=({getText(RP_LOI, INTENT, NSERC_REJECTED, 0, {$user_id}, {$project_id})}, )}">
            <![CDATA[
                {set(status, NSERC Rejected)}
            ]]>
        </ElseIf>
        <ElseIf if="{or({!=({getText(RP_LOI, INTENT, NSERC_SUBMITTED, 0, {$user_id}, {$project_id})}, )},
                        {!=({getText(RP_LOI, INTENT, NSERC_RESUBMITTED, 0, {$user_id}, {$project_id})}, )})}">
            <![CDATA[
                {set(status, NSERC Submitted)}
            ]]>
        </ElseIf>
        <ElseIf if="{!=({getText(RP_LOI, INTENT, COMMITTEE2_APPROVED, 0, {$user_id}, {$project_id})}, )}">
            <![CDATA[
                {set(status, Committee 2 Approved)}
            ]]>
        </ElseIf>
        <ElseIf if="{!=({getText(RP_LOI, INTENT, COMMITTEE1_APPROVED, 0, {$user_id}, {$project_id})}, )}">
            <![CDATA[
                {set(status, Committee 1 Approved)}
            ]]>
        </ElseIf>
        <ElseIf if="{!=({getText(RP_LOI, INTENT, LOI_SUBMITTED, 0, {$user_id}, {$project_id})}, )}">
            <![CDATA[
                {set(status, Submitted)}
            ]]>
        </ElseIf>
        <Else>
            <![CDATA[
                {set(status, Not Submitted)}
            ]]>
        </Else>
        <Static>
            <![CDATA[
                <h3>LOI Status: {get(status)}</h3>
                <h2>Letter of Intent</h2>
            ]]>
        </Static>
        <ReportItem id="pi" type="Text" blobItem="PI" width="300px">
            <![CDATA[
                <table>
                    <tr>
                        <td class="label">
                            Name of Principal Investigator:
                        </td>
                        <td class="value">
                            {$item}
                        </td>
                    </tr>
            ]]>
        </ReportItem>
        <ReportItem id="institution" type="Text" blobItem="INSTITUTION" width="300px">
            <![CDATA[
                    <tr>
                        <td class="label">
                            Department and University:
                        </td>
                        <td class="value">
                            {$item}
                        </td>
                    </tr>
                </table>
            ]]>
        </ReportItem>
        <ReportItem id="coi" type="Checkbox" blobItem="COI" blobType="BLOB_ARRAY" labels="Do you have a role in the CIC that creates a potential conflict of interest in evaluating this LOI?" options="Yes">
            <![CDATA[
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="coi_explain" type="Textarea" blobItem="COI_EXPLAIN" optional="true">
            <![CDATA[
                <div id='coi_explain'>
                    (If yes, please explain)
                    {$item}
                </div>
                <script type="text/javascript">
                    var changeCOI = function(){
                        var value = $("[name='LetterofIntent_coi[]']:checked").val();
                        if(value != undefined && value != ""){
                            $('#coi_explain').show();
                        }
                        else{
                            $('#coi_explain').hide();
                        }
                    }
                    $("[name='LetterofIntent_coi[]']").change(changeCOI).change();
                </script>
            ]]>
        </ReportItem>
        <ReportItem id="title" type="Text" blobItem="TITLE" width="510px">
            <![CDATA[
                <h3>Title of Project</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="keywords" type="MultiText" blobItem="KEYWORDS" blobType="BLOB_ARRAY" labels="Keyword" types="Text" multiple="true" min="5" max="10">
            <![CDATA[
                <h3>Keywords</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="problem" type="Textarea" blobItem="PROBLEM" rich="true">
            <![CDATA[
                <h3>Research Problem Statement</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="objectives" type="Textarea" blobItem="OBJECTIVES" rich="true">
            <![CDATA[
                <h3>Project Objectives</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="methodology" type="Textarea" blobItem="METHODOLOGY" rich="true">
            <![CDATA[
                <h3>Brief Methodology</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="team" type="MultiText" blobItem="TEAM" blobType="BLOB_ARRAY" labels="Name|Email|Faculty|Department|Discipline" types="Text|Text|Text|Text|Text" sizes="150|150|200|200|200" multiple="true">
            <![CDATA[
                <h3>Proposed Research Team (i.e., other faculty members)</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="experience" type="Textarea" blobItem="EXPERIENCE" rich="true">
            <![CDATA[
                <h3>Prior Research Experience Relevant to the Proposed Project</h3>
                {$item}
            ]]>
        </ReportItem>
        <!-- Budget -->
        <Static>
            <![CDATA[
                <h2>Budget</h2>
            ]]>
        </Static>
        <ReportItem type="MultiText" blobType="BLOB_ARRAY" blobItem="BUDGET" multiple="true"
                    indices="partner|year1|year2|year3|year4|year5|comments" 
                    labels="Partner/Source|Year 1|Year 2|Year 3|Year 4|Year 5|Comments" 
                    types="CICPartners|Text|Text|Text|Text|Text|Textarea"
                    sizes="400|50|50|50|50|50|250">
            <![CDATA[
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="milestones" type="Textarea" blobItem="MILESTONES" rich="true">
            <![CDATA[
                <h3>Project Duration and Milestones</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="area" type="Checkbox" blobItem="AREA" blobType="BLOB_ARRAY" options="Productivity and Performance|Health and Safety|Sustainability and the Environment|Off-site Construction and Modularization|Energy|Design and Planning|Other">
            <![CDATA[
                <h2>Metrics to Evaluate Project LOI:</h2>
                <h3>Fit</h3>
                <i>Does the project fit within the CIC’s research focus areas? (check all that apply)</i>
                <div style="display:flex;">
                    <div style="margin-right: 50px;">
                        <h3>Research Area</h3>
                        {$item}
                    </div>
            ]]>
        </ReportItem>
        <ReportItem id="method" type="Checkbox" blobItem="METHOD" blobType="BLOB_ARRAY" options="Artificial Intelligence (AI)|Automation and Technology|Simulation Modeling|Systems and Data Integration|Visualization/BIM|Decision support systems|Other">
            <![CDATA[
                    <div>
                        <h3>Research Method</h3>
                        {$item}
                    </div>
                </div>
            ]]>
        </ReportItem>
        <ReportItem id="fit_explain" type="Textarea" blobItem="FIT_EXPLAIN" optional="true">
            <![CDATA[
                <br />
                If other, please specify:
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="implementation" type="Textarea" blobItem="IMPLEMENTATION" rich="true">
            <![CDATA[
                <h3>Potential for Implementation</h3>
                What is the research outcome and how can it be implemented in practice?
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="interest" type="MultiText" blobItem="INTEREST" blobType="BLOB_ARRAY" indices="partner|engagement" labels="Confirmed industry partners|Engagement (role, in-kinds, cash contribution, etc.)" types="Text|Textarea" sizes="200|400" multiple="true">
            <![CDATA[
                <h3>Interest</h3>
                <h4>Have industry partners shown willingness to participate in the project?</h4>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="interest_other" type="MultiText" blobItem="INTEREST_OTHER" blobType="BLOB_ARRAY" indices="partner|engagement" labels="Other potential industry partners|Engagement (role, in-kinds, cash contribution, etc.)" types="Text|Textarea" sizes="200|400" multiple="true">
            <![CDATA[
                <h4>Other potential industry partners</h4>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="multidiscipline" type="Textarea" blobItem="MULTIDISCIPLINE" rich="true">
            <![CDATA[
                <h3>Multi-disciplinary Research</h3>
                Does the research include researchers from more than one discipline?
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="reach" type="Textarea" blobItem="REACH" rich="true">
            <![CDATA[
                <h3>Reach of Benefits</h3>
                How does the construction industry at large, a specific construction sector, or the government benefit from the proposed project?
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="contributions" type="Textarea" blobItem="CONTRIBUTIONS" rich="true">
            <![CDATA[
                <h3>Scientific Contributions</h3>
                What are the expected contributions of the project to the state-of-the-art in research?
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="metrics" type="Textarea" blobItem="METRICS" rich="true">
            <![CDATA[
                <h3>Proposed Metrics to Measure Project Performance at Completion</h3>
                What are the expected contributions of the project to the state-of-the-art in research?
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="endorsement" type="Checkbox" blobItem="ENDORSEMENT" blobType="BLOB_ARRAY" options="Hole School|Nasseri School|Masonry Group|Steel Center">
            <![CDATA[
                <h3>Please indicate whether any of the following groups are endorsing your LOI:</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="signatures" type="Textarea" blobItem="SIGNATURES" rich="true" optional="true">
            <![CDATA[
                <h3>Name and signature of the director of the endorsing group (if any):</h3>
                {$item}
            ]]>
        </ReportItem>
        <ReportItem id="acknowledge" type="Checkbox" blobItem="ACKNOWLEDGE" blobType="BLOB_ARRAY" options="I have read and agree to this stipulation">
            <![CDATA[
                <h3>By completing this form, you acknowledge that PIs of projects that are approved by the CIC are required to participate in and present at the CIC’s Innovation in Construction Forum</h3>
                {$item}
            ]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="review" tooltip="Review of on-line report content" name="Review" blobSection="SEC_NONE" type="ReportSection" renderpdf="false">
        <ReportItem id="report_review" type="ReviewReportItem">
            <![CDATA[{$item}]]>
        </ReportItem>
    </ReportSection>
    <ReportSection id="submit" tooltip="PDF generation and submission" name="Submit" blobSection="INTENT" type="EditableReportSection" renderpdf="false">
        <ReportItem id="submitted" type="TextReportItem" blobItem="LOI_SUBMITTED">
            <![CDATA[
                <div style='display:none;'>{$item}</div>
            ]]>
        </ReportItem>
        <ReportItem id="review" type="SimpleReviewSubmitReportItem" emails="{$my_email}" />
        <Static>
            <![CDATA[
                <script type='text/javascript'>
                    $('#reportFooter').prev().hide();
                    $('#reportFooter').hide();
                    $('#generateButton').click(function(){
                        $('input[name=Submit_submitted]').val('{timestamp(Y-m-d)}').change();
                    });
                </script>
            ]]>
        </Static>
    </ReportSection>
</Report>
