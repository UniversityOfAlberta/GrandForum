                <b style="color: red;">NOTE: You will be unable to make further changes after locking your annual report.</b>
                <div id='lockContainer' style='display:none;'>{$item}</div>
                <button id='lock' type="button" value="Save" name="submit" disabled>Sign & Lock</button><br /><br />
                <script type="text/javascript">
                    $('#reportFooter').prev().hide();
                    $('#reportFooter').hide();
                    setInterval(function(){
                        if($("#reportBody iframe").length > 0){
                            $('#lock').prop('disabled', false);
                        }
                        else{
                            $('#lock').prop('disabled', true);
                        }
                    }, 100);
                    $('#lock').click(function(){
                        if(confirm('Are you sure you want to proceed?\n\nThis annual report will be locked. You will not be able to make further changes.')){
                            $('#lockContainer input[type=checkbox]').prop('checked', true);
                            findAutosaves();
                            saveAll(function(){location.reload();});
                        } else {
                            $('#lockContainer input[type=checkbox]').prop('checked', false);
                        }
                        return false;
                    });
                </script>
            ]]>
        </ReportItem>
