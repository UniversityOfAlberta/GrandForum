<?xml version="1.0" encoding="UTF-8" ?>
<Report name="Grad Chair Table" reportType="RP_GRAD_CHAIR" ajax="true" personId="0" year="0">
    <Permissions>
        
    </Permissions>
    <ReportSection id="chair" type="EditableReportSection" tooltip="Grad Chair Table" name="Grad Chair Table" title="Grad Chair Table" blobSection="CHAIR">
        <Static>
            <![CDATA[
                <style>
                    div.noedit {
                        max-height: 100px;
                        overflow-y: auto;
                        display: inline-block;
                        text-align: left;
                    }
                </style>
                <table id='chair_table' class='wikitable'>
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>Email</th>
                            <th>Program</th>
                            <th>Supervisor(s)</th>
                            <th>Background</th>
                            <th>Supervisory Committee Meetings</th>
                            <th>Ethics and FGSR Teaching Sessions</th>
                            <th>Required Courses</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
            ]]>
        </Static>
        <ReportItemSet type="DepartmentStudents" department="{$my_dept}" university="University of Alberta">
            <Static>
                <![CDATA[
                    <tr>
                        <td>{$user_name}</td>
                        <td>{$user_email}</td>
                        <td>{$user_level}</td>
                        <td>{$user_supervisors}</td>
                ]]>
            </Static>
            <ReportItem id="background" type="Select" options="---|Completed|None held" blobItem="BACKGROUND" blobSubItem="{$user_id}">
                <![CDATA[
                    <td align='center'>
                        <div class='noedit'>{$value}</div>
                        <div class='edit' style='display:none;'>{$item}</div>
                ]]>
            </ReportItem>
            <ReportItem id="background_notes" type="Textarea" blobItem="BACKGROUND_NOTES" height="100px" blobSubItem="{$user_id}">
                <![CDATA[
                        <div class='noedit'>{$value}</div>
                        <div class='edit' style='display:none;'>{$item}</div>
                    </td>
                ]]>
            </ReportItem>
            <ReportItem id="meetings" type="Select" options="---|Completed|None held" blobItem="MEETINGS" blobSubItem="{$user_id}">
                <![CDATA[
                    <td align='center'>
                        <div class='noedit'>{$value}</div>
                        <div class='edit' style='display:none;'>{$item}</div>
                ]]>
            </ReportItem>
            <ReportItem id="meetings_notes" type="Textarea" blobItem="MEETINGS_NOTES" height="100px" blobSubItem="{$user_id}">
                <![CDATA[
                        <div class='noedit'>{$value}</div>
                        <div class='edit' style='display:none;'>{$item}</div>
                    </td>
                ]]>
            </ReportItem>
            <ReportItem id="ethics" type="Select" options="---|Completed|None held" blobItem="ETHICS" blobSubItem="{$user_id}">
                <![CDATA[
                    <td align='center'>
                        <div class='noedit'>{$value}</div>
                        <div class='edit' style='display:none;'>{$item}</div>
                ]]>
            </ReportItem>
            <ReportItem id="ethics_notes" type="Textarea" blobItem="ETHICS_NOTES" height="100px" blobSubItem="{$user_id}">
                <![CDATA[
                        <div class='noedit'>{$value}</div>
                        <div class='edit' style='display:none;'>{$item}</div>
                    </td>
                ]]>
            </ReportItem>
            <ReportItem id="courses" type="Select" options="---|Completed|None held" blobItem="COURSES" blobSubItem="{$user_id}">
                <![CDATA[
                    <td align='center'>
                        <div class='noedit'>{$value}</div>
                        <div class='edit' style='display:none;'>{$item}</div>
                ]]>
            </ReportItem>
            <ReportItem id="courses_notes" type="Textarea" blobItem="COURSES_NOTES" height="100px" blobSubItem="{$user_id}">
                <![CDATA[
                        <div class='noedit'>{$value}</div>
                        <div class='edit' style='display:none;'>{$item}</div>
                    </td>
                ]]>
            </ReportItem>
            <Static>
                <![CDATA[
                        <td>
                            <button class='editRow' type="button">Edit Row</button>
                        </td>
                    </tr>
                ]]>
            </Static>
        </ReportItemSet>
        <Static>
            <![CDATA[
                    </tbody>
                </table>
                <script type='text/javascript'>
                    $('#chair_table').DataTable({
                        aLengthMenu: [
                            [100, -1],
                            [100, "All"]
                        ],
                        iDisplayLength: -1
                    });
                    $('button.editRow').click(function(){
                        $('div.edit', $(this).closest('tr')).show();
                        $('div.noedit', $(this).closest('tr')).hide();
                        $(this).hide();
                    });
                </script>
            ]]>
        </Static>
    </ReportSection>
</Report>
